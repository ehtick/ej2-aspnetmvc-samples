@using Syncfusion.EJ2
@using Syncfusion.EJ2.Lists
@section ControlsSection{
    <div class="control-section">
            @Html.EJS().ListView("nestedlist").Enable(true).DataSource((IEnumerable<object>)ViewData["dataSource"]).Fields(new ListViewFieldSettings { IconCss = "icon", Tooltip = "text" }).ShowHeader(true).HeaderTitle("Folder").ShowIcon(true).Render()
    </div>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Nested List in ASP.NET MVC ListView control. Explore here for more details."/>
                }

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the nested list functionalities, which allows you to navigate to the sub list items by clicking any item and navigating back to the list item using the back icon at the top left.
        </p>
    </div>
}
@section Description{
    <div id="description">
      <p>The ListView component supports nested list. To achieve list navigation, the <code><a target='_blank' class='code' href='https://help.syncfusion.com/cr/cref_files/aspnetmvc-js2/Syncfusion.EJ2~Syncfusion.EJ2.Lists.ListViewFieldSettings~Child.html'>Child<span class="sr-only">opens in a new tab</span></a></code> property should be defined for the nested list in the array of JSON.</p>
    
      <p>This sample have nested folder with the sub folders or files.</p>
    </div>
}

<style>
    .e-listview .e-list-icon,
    .e-bigger .e-listview .e-list-icon {
        height: 24px;
        width: 30px;
    }

    .folder {
        background-repeat: no-repeat;
        background-image: url('@Url.Content("~/Content/images/listview/file_icons.png")');
        background-position: -5px -466px;
        background-size: 302%;
    }

    .file {
        background-repeat: no-repeat;
        background-image: url('@Url.Content("~/Content/images/listview/file_icons.png")');
        background-position: -5px -151px;
        background-size: 302%;
    }

    #nestedlist {
        max-width: 500px;
        margin: auto;
        border: 1px solid #dddddd;
        border-radius: 3px;
    }
</style>


@section Title{
                    <title>ASP.NET MVC ListView Nested List Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Nested List in ASP.NET MVC ListView Control</h1>
                }