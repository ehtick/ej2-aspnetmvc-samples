@using Syncfusion.EJ2
@using Syncfusion.EJ2.CircularGauge
@section ControlsSection{
    <style>
        .panel {
            width: 190px !important;
            height: 70px !important;
            margin-left: 5% !important;
            margin-top: 10% !important;
            border-color: lightgray;
            float: left;
            background-color: transparent;
        }

        .content {
            float: left !important;
            margin-left: 62px !important;
            margin-top: 10px !important;
            text-align: left !important;
            position: absolute;
            width: 120px;
        }

        .firstAnnotation {
            height: 22px;
            width: 22px;
        }

        .e-view.fluent2 div.annotation4, .e-view.fluent2-dark div.annotation4 {
            margin-top: 1px;
            margin-left: 3px;
        }

        #gauge2_Axis_0_Annotation_0 .firstAnnotation {
            height: 17px;
            width: 17px;
            margin-top: 2px;
            margin-left: 2px;
        }

        .fabric #gauge2_Axis_0_Annotation_0 .firstAnnotation, .fabric-dark #gauge2_Axis_0_Annotation_0 .firstAnnotation {
            height: 17px;
            width: 17px;
            margin-left: 2px;
            margin-bottom: 4px;
        }

        .secondAnnotation {
            height: 20px;
            width: 20px;
        }

        #gauge3_Axis_0_Annotation_0 .secondAnnotation {
            height: 17px;
            width: 17px;
            margin-top: 2px;
            margin-left: 2px;
        }

        .fabric #gauge3_Axis_0_Annotation_0 .secondAnnotation, .fabric-dark #gauge3_Axis_0_Annotation_0 .secondAnnotation {
            height: 17px;
            width: 17px;
            margin-left: 2px;
            margin-bottom: 4px;
        }

        .thirdAnnotation {
            height: 22px;
            width: 22px;
        }

        #gauge4_Axis_0_Annotation_0 .thirdAnnotation {
            height: 17px;
            width: 17px;
            margin-top: 0px;
        }

        .tailwind #gauge4_Axis_0_Annotation_0 .thirdAnnotation, .tailwind-dark #gauge4_Axis_0_Annotation_0 .thirdAnnotation {
            height: 17px;
            width: 17px;
            margin-bottom: 4px;
        }

        .fabric #gauge4_Axis_0_Annotation_0 .thirdAnnotation, .fabric-dark #gauge4_Axis_0_Annotation_0 .thirdAnnotation {
            height: 17px;
            width: 17px;
            margin-left: 1px;
            margin-bottom: 5px;
        }
        .tailwind3 #panel-two {
            font-size: 16px !important;
        }
    </style>

    <style type="text/css" media="screen and (max-width:1160px)">
        .panel {
            width: 165px !important;
        }

        .firstcontent, .tailwind3 #panel-two {
            font-size: 13px !important;
        }

        .secondcontent {
            font-size: 15px !important;
        }

        .content {
            margin-top: 15px !important;
        }

        .divide {
            margin-left: 0%;
        }
    </style>

    <style type="text/css" media="screen and (max-width:990px)">
        .panel {
            width: 50% !important;
            height: 80px !important;
            margin-left: 27% !important;
            margin-top: 0% !important;
        }

        .subgauge {
            margin-left: 8% !important;
            margin-top: 1% !important;
        }

        .content {
            margin-left: 18% !important;
            margin-top: 2% !important;
        }

        .firstcontent, .tailwind3 #panel-two {
            font-size: 16px !important;
        }

        .secondcontent {
            font-size: 18px !important;
        }
    </style>

    <style type="text/css" media="screen and (max-width:410px)">
        #column1 {
            margin-left: -9% !important;
        }

        .subgauge {
            margin-left: 3% !important;
        }

        .panel {
            width: 52% !important;
        }

        .content {
            margin-top: 3% !important;
        }
    </style>
    <div>
        <script id='exetracking1' type="text/x-template">
            <div id='annotation' style="width:300px">
                <img class="firstAnnotation" src="@Url.Content("~/Content/CircularGauge/Images/image1.svg")" />
            </div>
        </script>
        <script id="exetracking2" type="text/x-template">
            <div id="annotation" style="width:100px" ;>
                <img class="secondAnnotation" src="@Url.Content("~/Content/CircularGauge/Images/image2.svg")">
            </div>
        </script>
        <script id="exetracking3" type="text/x-template">
            <div id="annotation" style="width:100px" ;>
                <img class="thirdAnnotation" src="@Url.Content("~/Content/CircularGauge/Images/image3.svg")">
            </div>
        </script>
        <script id="exetracking4" type="text/x-template">
            <div id="annotation" style="width:100px;">
                <img style="height:17px;width:17px" src="@Url.Content("~/Content/CircularGauge/Images/image4.svg")">
            </div>
        </script>
        <script id="exetracking5" type="text/x-template">
            <div id="annotation" style="width:100px;">
                <img style="height:15px;width:15px" src="@Url.Content("~/Content/CircularGauge/Images/image5.svg")">
            </div>
        </script>
        <script id="exetracking6" type="text/x-template">
            <div id="annotation" style="width:100px;">
                <img style="height:17px;width:17px" src="@Url.Content("~/Content/CircularGauge/Images/image6.svg")">
            </div>
        </script>
        <div class="col-lg-9 col-md-9 control-section" id="column1" align="center">
            @Html.EJS().CircularGauge("gauge1").Width("400px").Height("400px").Background("transparent").Load("gaugeLoad").Axes(axes => axes
            .StartAngle(0).EndAngle(360).LabelStyle(labelStyle => labelStyle.Position(Position.Inside).Font(font => font.Size("0px").Color("transparent")).UseRangeColor(true))
            .LineStyle(lineStyle => lineStyle.Width(0)).Minimum(0).Maximum(100).MajorTicks(majorTick => majorTick.Height(0).Color("transparent")).MinorTicks(minorTick => minorTick.Height(0).Color("transparent"))
            .Annotations(annotation =>
            {
                annotation.Angle(8).Radius("80%").ZIndex("2").Content("#exetracking1").Add();
                annotation.Angle(11).Radius("58%").ZIndex("2").Content("#exetracking2").Add();
                annotation.Angle(16).Radius("36%").ZIndex("2").Content("#exetracking3").Add();
            })
            .Ranges(range =>
            {
                range.Start(0).End(100).StartWidth("40").EndWidth("40").Radius("90%").Color("#fa114f").Opacity(0.2).Add();
                range.Start(0).End(100).StartWidth("40").EndWidth("40").Radius("68%").Color("#99ff01").Opacity(0.2).Add();
                range.Start(0).End(100).StartWidth("40").EndWidth("40").Radius("46%").Color("#00d8fe").Opacity(0.2).Add();
            }).Pointers(pointer =>
            {
                pointer.Type(Syncfusion.EJ2.CircularGauge.PointerType.RangeBar).Value(65).Radius("90%").Color("#fa114f").PointerWidth(40).RoundedCornerRadius(25).Animation(animation => animation.Enable(true)).Add();
                pointer.Type(Syncfusion.EJ2.CircularGauge.PointerType.RangeBar).Value(43).Radius("68%").Color("#99ff01").PointerWidth(40).RoundedCornerRadius(25).Animation(animation => animation.Enable(true)).Add();
                pointer.Type(Syncfusion.EJ2.CircularGauge.PointerType.RangeBar).Value(58).Radius("46%").Color("#00d8fe").PointerWidth(40).RoundedCornerRadius(25).Animation(animation => animation.Enable(true)).Add();
            }).Add()).Render()
        </div>
        <div class="col-lg-3 col-md-3 control-section" style="margin-left: -8%; margin-top: 2%;" align="center">
            <div class="panel" id="panel1" align="center">
                <div class="subgauge" style="float: left; margin-top: 3%">
                    @Html.EJS().CircularGauge("gauge2").Width("65px").Height("65px").Background("transparent").Load("gaugeLoad").Axes(axes => axes
                     .StartAngle(0).EndAngle(360).LabelStyle(labelStyle => labelStyle.Position(Position.Inside).Font(font => font.Size("0px").Color("transparent")).UseRangeColor(true))
                     .LineStyle(lineStyle => lineStyle.Width(0)).Minimum(0).Maximum(100).MajorTicks(majorTick => majorTick.Height(0).Color("transparent")).MinorTicks(minorTick => minorTick.Height(0).Color("transparent"))
                     .Annotations(annotation => annotation.Angle(0).Radius("0%").ZIndex("2").Content("#exetracking1").Add())
                    .Ranges(range => range.Start(0).End(100).Radius("100%").StartWidth("8").EndWidth("8").Color("#fa114f").Opacity(0.2).Add())
                    .Pointers(pointer => pointer.RoundedCornerRadius(5).Value(65).Type(PointerType.RangeBar).Radius("100%").Color("#fa114f").Animation(animation => animation.Enable(true)).PointerWidth(8).Add()).Add()).Render()
                </div>
                <div class="content">
                    <span class="firstcontent" style="font-size: 17px;">MOVE</span>
                    <span class="firstcontent" style="font-size: 17px; color: #f4104d">65%</span><br />
                    <span class="secondcontent" style="color: #f4104d; font-size: 19px">338/520 CAL</span>
                </div>
            </div>

            <div class="panel" id="panel2" align="center">
                <div class="subgauge" style="float: left; margin-top: 3%">
                    @Html.EJS().CircularGauge("gauge3").Width("65px").Height("65px").Background("transparent").Load("gaugeLoad").Axes(axes => axes
                    .StartAngle(0).EndAngle(360).LabelStyle(labelStyle => labelStyle.Position(Position.Inside).Font(font => font.Size("0px").Color("transparent")).UseRangeColor(true))
                    .LineStyle(lineStyle => lineStyle.Width(0)).Minimum(0).Maximum(100).MajorTicks(majorTick => majorTick.Height(0).Color("transparent")).MinorTicks(minorTick => minorTick.Height(0).Color("transparent"))
                    .Annotations(annotation => annotation.Angle(0).Radius("0%").ZIndex("2").Content("#exetracking2").Add())
                    .Ranges(range => range.Start(0).End(100).Radius("100%").StartWidth("8").EndWidth("8").Color("#99ff01").Opacity(0.2).Add())
                    .Pointers(pointer => pointer.RoundedCornerRadius(5).Value(43).Type(PointerType.RangeBar).Radius("100%").Color("#99ff01").Animation(animation => animation.Enable(true)).PointerWidth(8).Add()).Add()).Render()
                </div>
                <div class="content">
                    <span class="firstcontent" id="panel-two" style="font-size: 17px;">EXERCISE</span>
                    <span class="firstcontent" style="font-size: 17px; color: #a6ff00">43%</span><br />
                    <span class="secondcontent" style="color: #a6ff00; font-size: 19px">13/30 MIN</span>
                </div>
            </div>

            <div class="panel" id="panel3" align="center">
                <div class="subgauge" style="float: left; margin-top: 3%">
                    @Html.EJS().CircularGauge("gauge4").Width("65px").Height("65px").Background("transparent").Load("gaugeLoad").Axes(axes => axes
                    .StartAngle(0).EndAngle(360).LabelStyle(labelStyle => labelStyle.Position(Position.Inside).Font(font => font.Size("0px").Color("transparent")).UseRangeColor(true))
                    .LineStyle(lineStyle => lineStyle.Width(0)).Minimum(0).Maximum(100).MajorTicks(majorTick => majorTick.Height(0).Color("transparent")).MinorTicks(minorTick => minorTick.Height(0).Color("transparent"))
                    .Annotations(annotation => annotation.Angle(0).Radius("0%").ZIndex("2").Content("#exetracking3").Add())
                    .Ranges(range => range.Start(0).End(100).Radius("100%").StartWidth("8").EndWidth("8").Color("#00d8fe").Opacity(0.2).Add())
                    .Pointers(pointer => pointer.RoundedCornerRadius(5).Value(58).Type(PointerType.RangeBar).Radius("100%").Color("#00d8fe").Animation(animation => animation.Enable(true)).PointerWidth(8).Add()).Add()).Render()
                </div>
                <div class="content">
                    <span class="firstcontent" style="font-size: 17px;">STAND</span>
                    <span class="firstcontent" style="font-size: 17px; color: #00d8fe">58%</span><br />
                    <span class="secondcontent" style="color: #00d8fe; font-size: 19px">7/12 HR</span>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function gaugeLoad(sender) {
            @* custom code start *@
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Material';
            sender.gauge.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/-high/i, 'High').replace(/contrast/i, 'Contrast').replace(/5.3/i, '5');
            @* custom code end *@
            if (selectedTheme === 'highcontrast') {
                if (sender.gauge.element.id === 'gauge2') {
                    sender.gauge.axes[0].annotations[0].content = "#exetracking4";
                }
                if (sender.gauge.element.id === 'gauge3') {
                    sender.gauge.axes[0].annotations[0].content = "#exetracking5";
                }
                if (sender.gauge.element.id === 'gauge4') {
                    sender.gauge.axes[0].annotations[0].content = "#exetracking6";
                }
            }
        }
    </script>
}

