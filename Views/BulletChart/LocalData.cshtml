@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section">
        <div style="text-align:center">
            @(Html.EJS().BulletChart("container")
            .Tooltip(tp => tp.Enable(true))
            .ValueField("completedStories")
            .Width("700")
            .Height("400")
            .TargetField("requiredStories")
            .ValueFill("color")
            .CategoryField("name")
            .Animation(an => an.Enable(false))
            .Ranges(rn =>
            {
                rn.End(25).Opacity(1).Color("#DBE7F3").Add();
                rn.End(37).Opacity(1).Color("#BBCEE7").Add();
                rn.End(45).Opacity(1).Color("#96B2D7").Add();
            })
            .Minimum(5).Maximum(45).Interval(5)
            .Title("Sprint Planning")
            .Subtitle("Estimated in story points")
            .TitlePosition(Syncfusion.EJ2.Charts.TextPosition.Top)
            .Orientation(Syncfusion.EJ2.Charts.OrientationType.Horizontal)
            .MinorTickLines(mt => mt.Width(0))
            .DataSource("localData")
            .Load("load")
            .Render()
        )
        </div>
    </div>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/bullet-chart/theme-color.js"></script>
    <script>
        var localData = [
            {
                requiredStories: 20,
                completedStories: 25,
                name: 'David',
                color: "#7f84e8"
            },
            {
                requiredStories: 25,
                completedStories: 20,
                name: 'Asif',
                color: "#dd8abd"
            },
            {
                requiredStories: 15,
                completedStories: 10,
                name: 'Thomas',
                color: "#70ad47"
            },
            {
                requiredStories: 40,
                completedStories: 39,
                name: 'Rohit',
                color: "#f8b883"
            },
            {
                requiredStories: 35,
                completedStories: 40,
                name: 'Virat',
                color: "#e56590"
            },
            {
                requiredStories: 28,
                completedStories: 25,
                name: 'Jude',
                color: "#357cd2"
            },
            {
                requiredStories: 10,
                completedStories: 18,
                name: 'Warner',
                color: "#404041"
            },
            {
                requiredStories: 30,
                completedStories: 28,
                name: 'Malik',
                color: "#00bdae"
            }
        ];
        var load = function (args) {
            loadBulletChartTheme(args);
            args.bulletChart.width = ej.base.Browser.isDevice ? "100%" : "80%";            
            var color = [];
            switch (args.bulletChart.theme) {
                case 'Fabric':
                    color = fabricColors;
                    break;
                case 'Bootstrap4':
                case 'Bootstrap':
                    color = bootstrapColors;
                    break;
                case 'HighContrastLight':
                case 'HighContrast':
                    color = highContrastColors;
                    break;
                case 'MaterialDark':
                    color = materialColors;
                    break;
                case 'FabricDark':
                    color = fabricColors;
                    break;
                case 'BootstrapDark':
                    color = bootstrapDarkColors;
                    break;
                case 'Tailwind':
                    color = tailwindColors;
                    break;
                case 'TailwindDark':
                    color = tailwindDarkColors;
                    break;
                case 'Tailwind3':
                    color = tailwind3Colors;
                    break;
                case 'TailwindDark':
                    color = tailwind3DarkColors;
                    break;
                case 'Bootstrap5':
                    color = bootstarp5Colors;
                    break;
                case 'Bootstrap5Dark':
                    color = bootstarp5DarkColors;
                    break;
                case 'Fluent':
                case 'FluentDark':
                    color = fluentColors;
                    break;
                case 'Material3':
                    color = material3Colors;
                    break;
                case 'Material3Dark':
                    color = material3DarkColors;
                    break;
                case 'Fluent2':
                    color = fluent2Colors;
                    break;
                case "Fluent2Dark":
                case 'Fluent2HighContrast':
                    color = fluent2HighContrastColors;
                    break;
                default:
                    color = defaultColors;
                    break;
            }
            for (var i = 0; i < (args.bulletChart.dataSource).length; i++) {
                args.bulletChart.dataSource[i].color = color[i];
            }
        }
    </script>
}
