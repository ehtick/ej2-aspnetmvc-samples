@using Syncfusion.EJ2
@using Syncfusion.EJ2.CircularGauge

@section ControlsSection{
    <div class="control-section" align="center">
        @Html.EJS().CircularGauge("container").Load("gaugeLoad").Axes(axes => axes
       .Radius("90%").StartAngle(220).EndAngle(140).Minimum(0).Maximum(100).LabelStyle(ls => ls.Position(Position.Outside).Font((CircularGaugeFont)ViewData["labelFont"]))
       .LineStyle(lin => lin.Width(0))
       .MinorTicks(mi => mi.Height(0.0).Color("Transparent")).MajorTicks(mj => mj.Width(0).Height(0).Color("Transparent"))
       .Pointers((List<CircularGaugePointer>)ViewData["Pointers"])
       .Annotations((List<CircularGaugeAnnotation>)ViewData["Annotations"])
       .Ranges((List<CircularGaugeRange>)ViewData["Ranges"]).Add()).Render()
    </div>
    <style>
        #container_Annotations_0 {
            line-height: 0.5;
        }

        .annotationText {
            font-family: inherit;
            font-size: 44px;
            margin-top: 0px;
            margin-left: 0px;
        }

        .titleText {
            font-size: 30px;
            font-family: inherit;
            margin-top: 0px;
        }

        .triangle-up {
            width: 20px;
            height: 20px;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -28px;
        }

        .material div.triangle-up, .material-dark div.triangle-up, .bootstrap-dark div.triangle-up, .bootstrap div.triangle-up,
        .bootstrap4 div.triangle-up, .fabric div.triangle-up, .fabric div.triangle-up {
            margin-top: -32px;
        }

        .tailwind3 div.triangle-up, .tailwind3-dark div.triangle-up {
            margin-top: -5px;
        }
        .tailwind3 div.titleText, .tailwind3-dark div.titleText {
            margin-top: 13px;
            margin-left: 5px;
        }
    </style>
    <style type="text/css" media="screen and (max-width:420px)">
        .triangle-up {
            width: 20px;
            height: 20px;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -10px;
        }

        .titleText {
            font-size: 20px;
            margin-top: 14px;
            margin-left: 14px;
        }

        .annotationText {
            font-size: 30px;
            margin-top: 9px;
            margin-left: 4px;
        }

        .material div.triangle-up, .material-dark div.triangle-up, .bootstrap-dark div.triangle-up, .bootstrap div.triangle-up,
        .bootstrap4 div.triangle-up, .fabric div.triangle-up, .fabric div.triangle-up {
            margin-top: -15px;
        }
        .tailwind3 div.titleText, .tailwind3-dark div.titleText {
            margin-top: 25px;
            margin-left: 15px;
        }
        .tailwind3 div.triangle-up, .tailwind3-dark div.triangle-up {
            margin-top: 8px;
            margin-left: 5px;
        }
    </style>
    <script type="text/javascript">
        function gaugeLoad(sender) {
            var selectedTheme = themeName ? themeName : 'Material';
            sender.gauge.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/-high/i, 'High').replace(/contrast/i, 'Contrast').replace(/5.3/i, '5');
            if (selectedTheme.indexOf("tailwind") != -1) {
                sender.gauge.axes[0].annotations[0].angle = 92;
                sender.gauge.axes[0].annotations[0].radius = "-40%";
                sender.gauge.axes[0].annotations[1].angle = 170;
                sender.gauge.axes[0].annotations[1].radius = "-29%";
                sender.gauge.axes[0].annotations[2].angle = 148;
                sender.gauge.axes[0].annotations[2].radius = "12%";
            }
        }
    </script>
}

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample shows an arc gauge with a key performance indicator (KPI), which is a measurable value that shows how an organization meets key business objectives.
        </p>
    </div>
}

