@using Syncfusion.EJ2.Inputs
@using Syncfusion.EJ2
@section ControlsSection{

    <div id="textarea-default" class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row material">
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6"><b>Outlined and Filled</b></div>
            </div>
            <div class="row material">
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    @Html.EJS().TextArea("outlined").Placeholder("Outlined").CssClass("e-outline").FloatLabelType(FloatLabelType.Auto).Rows(5).Cols(250).Render()
                </div>
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    @Html.EJS().TextArea("filled").Placeholder("Filled").CssClass("e-filled").FloatLabelType(FloatLabelType.Auto).Rows(5).Cols(250).Render()
                </div>
            </div>
            <div class="row">
            <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6"><b>Please leave a comment</b></div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                @Html.EJS().TextArea("default").Placeholder("Enter your comments").FloatLabelType(FloatLabelType.Auto).Rows(5).Cols(500).Render()
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6"><b>Validation States</b></div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-lg-4 col-md-4">
                <div class="e-input-group e-success">
                    <textarea class="e-input" placeholder="Success" row="5" cols="250"></textarea>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-lg-4 col-md-4">
                <div class="e-input-group e-warning">
                    <textarea class="e-input" placeholder="Warning" row="5" cols="250"></textarea>
                </div>
            </div>
            <div class="col-xs-4 col-sm-4 col-lg-4 col-md-4">
                <div class="e-input-group e-error">
                    <textarea class="e-input" placeholder="Error" row="5" cols="250"></textarea>
                </div>
            </div>
        </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        var input = document.querySelectorAll('.e-input-group .e-input,.e-float-input.e-input-group textarea');
        var focusFn = function (index) {
            return function () {
                getParentNode(input[index]).classList.add('e-input-focus');
            };
        };

        var blurFn = function (index) {
            return function () {
                getParentNode(input[index]).classList.remove('e-input-focus');
            };
        };

        for (var index = 0; index < input.length; index++) {
            //Focus Event binding for textarea component
            input[index].addEventListener('focus', focusFn(index));
            //Blur Event binding for textarea component
            input[index].addEventListener('blur', blurFn(index));
        }
        
        function getParentNode(element) {
            var parentNode = element.parentNode;
            if (parentNode.classList.contains('e-input-in-wrap')) {
                return parentNode.parentNode;
            }
            return parentNode;
        }
    </script>
}
