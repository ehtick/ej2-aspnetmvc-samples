@using Syncfusion.EJ2;
@section ControlsSection{
<div class="control-section">
    <div class="row" style="align-items: center; text-align: center;">
        <div>
            @(Html.EJS().ProgressBar("linearProcesscontainer").Height("30").Width("700").Type(Syncfusion.EJ2.ProgressBar.ProgressType.Linear).Value(40)
                                           .IsIndeterminate(true).TrackThickness(10).ProgressThickness(10).Minimum(0).Maximum(100)
                                           .Render())
        </div>
        <div class="col-lg-4 col-md-4" style="text-align: center">
        </div>
        <div class="col-lg-4 col-md-4" style="text-align: center">
            <div>
                @(Html.EJS().ProgressBar("circularprogresscontainer").Width("350").Height("350").Type(Syncfusion.EJ2.ProgressBar.ProgressType.Circular).Value(40)
                                     .IsIndeterminate(true).TrackThickness(10).ProgressThickness(10).Minimum(0).Maximum(100)
                                     .Annotations(an =>
                                     {
                                         an.Content("<div style='font-size:35px;font-weight:bold;color:#0078D6;fill:#0078D6'><span>Loading...</span></div>")
                                     .AnnotationAngle(90).AnnotationRadius("-40%").Add();
                                     })
                                     .Render())
            </div>
        </div>
        <div class="col-lg-4 col-md-4" style="text-align: center">
        </div>
    </div>
</div>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script>
        var progressLoad = function (args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Fluent2';
            args.progressBar.theme = (selectedTheme.charAt(0).toUpperCase() +
                selectedTheme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5');
        };
    </script>
}
@*custom code start*@
@section Meta{
    <meta name="description" content="This example demonstrates the Range and Label Settings in ASP.NET MVC Bullet Chart control. Explore here for more details." />
}
@*custom code end*@
@section ActionDescription{
    <p>
        This sample illustrates a default bullet chart to compare the feature (value) bar with comparative (target) bar.
        It includes variety of configurations to change the look and feel of the chart.
    </p>
}
@section Description{
    <p>
        Tooltip is enabled in this example, to see the tooltip in action, hover a feature bar or comparative bar on the bullet chart.
    </p>
}
@section Title{
    <title>ASP.NET MVC Progress Bar Loadng Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example for Loading sample in ASP.NET MVC Progress Bar Control</h1>
}