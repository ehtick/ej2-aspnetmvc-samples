                    <meta name="description" content="This example demonstrates the Date Range in ASP.NET MVC Calendar control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET MVC Calendar Date Range Example - Syncfusion Demos </title> 
                }
@section Header{
