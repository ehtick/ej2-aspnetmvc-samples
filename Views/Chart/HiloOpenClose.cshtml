 @using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/stock-chart-data.js"></script>
    <div class="control-section">
        <div align="center">
            <h4 id="days" style="font-family: Segoe UI;font-weight: 500; font-style:normal; font-size:15px;">AAPL Historical</h4>
        </div>
        <div style="text-align:center">
            @Html.EJS().Chart("container").Series(series =>
            {
                series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.HiloOpenClose).XName("x").High("high").Low("low").Close("close")
                .Open("open").DataSource("ChartPoints").Name("Apple Inc.(AAPL)").BearFillColor("#2ecd71").BullFillColor("#e74c3d").Add();
            }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime)
            .MajorGridLines(mg=>mg.Width(0)).CrosshairTooltip(ct=>ct.Enable(true))
            ).PrimaryYAxis(py => py.Minimum(40).Maximum(140).Interval(20)
            .MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0)).Title("Price").LabelFormat("n0")
            ).ChartArea(area => area.Border(br => br.Width(0))).Crosshair(cr => cr.Enable(true)
            .LineType(Syncfusion.EJ2.Charts.LineType.Vertical)).Load("chartload").LegendSettings(lg => lg.Visible(false).Title("AAPL Historical")
                 ).Tooltip(tt => tt.Enable(true).Shared(true).Header("").Format("<b>Apple Inc.(AAPL)</b> <br> High : <b>${point.high}</b> <br> Low : <b>${point.low}</b> <br> Open : <b>${point.open}</b> <br> Close : <b>${point.close}</b>")).Render()
        </div>
    </div>

 @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
 @*custom code end*@
