@using Syncfusion.EJ2;
@section ControlsSection{
<div class="control-section">
    <div style="text-align:center">

        @Html.EJS().Chart("container").Series(series =>
   {
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).XName("Day").YName("DEU_Temp").Opacity(1).Width(2).Name("Germany")
           .Marker(mr=>mr.Visible(true).Width(7).Height(7)).DataSource(ViewData["ChartPoints"]).Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline).YAxisName("yAxis2").XName("Day").Opacity(1).Width(2)
       .Marker(mr=>mr.Visible(true).Width(7).Height(7).IsFilled(true)).YName("JPN_Temp").DataSource(ViewData["ChartPoints"]).Name("Japan").Add();

   }).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorGridLines(mg=>mg.Width(0))
       .MajorTickLines(mt => mt.Width(0)).MinorGridLines(mg=>mg.Width(0))
       ).PrimaryYAxis(py => py.LabelFormat("{value}°F").Maximum(100).Minimum(0).Interval(20).LineStyle(ls=>ls.Width(0)).MajorTickLines(mt => mt.Width(0))
       ).Axes(ax =>
       {
           ax.OpposedPosition(true).RowIndex(0).Minimum(24).Maximum(36).Interval(2).Name("yAxis2").LabelFormat("{value}°C").MajorGridLines(mg=>mg.Width(0)).LineStyle(ls=>ls.Width(0)).Add();
       }
       ).Annotations(an =>
       {
           an.X("SUN").Y("70").CoordinateUnits(Syncfusion.EJ2.Charts.Units.Point).Content((string)ViewData["content1"]).Add();
           an.X("SAT").Y("35").YAxisName("yAxis2").CoordinateUnits(Syncfusion.EJ2.Charts.Units.Point).Content((string)ViewData["content"]).Add();
       }
).Title("Weather Data").ChartArea(area => area.Border(br => br.Width(0))).Tooltip(tt => tt.Enable(true).EnableHighlight(true)).LegendSettings(lg=>lg.Visible(false)).Load("load").Render()
    </div>
</div>
 @*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
 @*custom code end*@
<div id='chart_cloud' style="display:none">
    <img src="@Url.Content("~/Content/chart/cloud.png")" style='width: 41px; height: 41px' />
</div>
<div id='chart_sunny' style="display:none">
    <img src="@Url.Content("~/Content/chart/sunny.png")" style='width: 41px; height: 41px' />
</div>
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
