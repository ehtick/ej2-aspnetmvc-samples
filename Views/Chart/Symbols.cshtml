@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" style="text-align:center">

        @Html.EJS().Chart("container-vertical").Series(series =>
   {

       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("Country").YName("FBUser_07").Opacity(1)
       .Marker(mr=>mr.Visible(true).Height(8).Width(8).IsFilled(true).Shape(Syncfusion.EJ2.Charts.ChartShape.Diamond).DataLabel(dl=>dl.Name("text")))
       .DataSource(ViewData["ChartPoints"]).Name("2007").Width(2).Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("Country").YName("FBUser_08").Opacity(1)
       .Marker(mr => mr.Visible(true).Height(8).Width(8).IsFilled(true).Shape(Syncfusion.EJ2.Charts.ChartShape.Pentagon).DataLabel(dl => dl.Name("text")))
       .DataSource(ViewData["ChartPoints"]).Name("2008").Width(2).Add();
       series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line).XName("Country").YName("FBUser_09").Opacity(1)
       .Marker(mr => mr.Visible(true).Height(8).Width(8).IsFilled(true).Shape(Syncfusion.EJ2.Charts.ChartShape.Triangle).DataLabel(dl => dl.Name("text")))
       .DataSource(ViewData["ChartPoints"]).Name("2009").Width(2).Add();

   }).PrimaryXAxis(px=>px.Interval(1).MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mg=>mg.Width(0)).ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
       ).PrimaryYAxis(px => px.LabelFormat("{value}%").Minimum(0).Maximum(75).Interval(15).LineStyle(ls=>ls.Width(0)).MajorTickLines(mg=>mg.Width(0)).RangePadding(Syncfusion.EJ2.Charts.ChartRangePadding.None)
       ).Tooltip(tr => tr.Enable(true).EnableHighlight(true).ShowNearestTooltip(true).Header("").Format("<b>${point.x}</b> <br> ${series.name} : <b>${point.y}</b>")).ChartArea(area => area.Border(br => br.Width(0))).LegendSettings(lg => lg.Visible(true).EnableHighlight(true)).Title("FB Penetration of Internet Audience").Load("load").Render()
    </div>

    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script> 
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice?'None':'Rotate45';
            args.chart.primaryXAxis.labelRotation = ej.base.Browser.isDevice?'-45':'0';
        };
    </script>          
}
   @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Marker Chart in ASP.NET MVC Chart control. Explore here for more details."/>
                }
   @*custom code end*@
@section ActionDescription{
    <p>
        This sample illustrates Facebook users in a chart for different countries over several years. In a line-based series, data points can be annotated using symbols.
    </p>
}
@section Description{
    <p>
        Each data point in a series can be represented by a symbol as a marker. You can customize the shape, size and color of the symbol with the <a target="_blank" href="https://help.syncfusion.com/cr/aspnetmvc-js2/Syncfusion.EJ2.Charts.ChartMarkerSettingsBuilder.html#methods" aria-label="ChartMarker">ChartMarker<span class="sr-only">opens in a new tab</span></a> class.
    </p>
    <p>
        <code>Tooltip</code> is enabled in this example. To see the tooltip in action, hover over a point or tap on a point in touch-enabled devices.
    </p>
