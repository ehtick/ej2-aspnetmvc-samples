@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="col-lg-12 control-section" align="center">
        
             @Html.EJS().Chart("container").Series(series =>
        {
            series.Trendlines(tl=> { tl.Type(Syncfusion.EJ2.Charts.TrendlineTypes.Linear).Width(3).Name("Trends").Fill("#C64A75").EnableTooltip(false).Add(); })
                .Type(Syncfusion.EJ2.Charts.ChartSeriesType.Spline)
            .XName("Period").YName("Rupees").Marker(mr=>mr.Visible(true).IsFilled(true).Height(7).Width(7))
           .Name("Rupees").DataSource(ViewData["ChartPoints"]).Add();
        }).PrimaryXAxis(px => px.EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).LabelFormat("yyyy")
        .MajorGridLines(mg=>mg.Width(0)).ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(1))
             ).PrimaryYAxis(py => py.Title("Rupees against Dollars").Interval(10).Minimum(0).Maximum(80).LabelFormat("â‚¹{value}")
             .MajorTickLines(mt=>mt.Width(0)).MinorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0))
             ).ChartArea(area => area.Border(br => br.Width(0))
             ).Title("USD to INR Rates").LegendSettings(lg => lg.Visible(true).ShapeHeight(15).ShapeWidth(15)
             ).Tooltip(tt => tt.Enable(true).ShowNearestTooltip(true).EnableHighlight(true)).Load("load").Render()
            </div>
    
<style>
 @*custom code start*@
    #control-container {
        padding: 0px !important;
    }
 @*custom code end*@
    #container_Series_0_TrendLine_0 {
        stroke-dasharray: 10px 10px;
        stroke-linejoin: round; stroke-linecap: round;
        -webkit-animation: dash 1s linear infinite;
        animation: dash 1s linear infinite;
    }

    @@-webkit-keyframes dash {
        100% {
            stroke-dashoffset: -20px;
        }
    }

    @@keyframes dash {
        100% {
            stroke-dashoffset: -20px;
        }
    }
</style>
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script type="text/javascript">
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";   
        };
    </script>
}
 @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Trendlines in ASP.NET MVC Chart control. Explore here for more details."/>
                }
 @*custom code end*@
@section ActionDescription{
    <p>
        This sample shows the trend of Indian rupees and US dollar variations in the chart.
    </p>
}
