    <script>
        var load = function (args) {
            var selectedTheme = loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.tooltip.location.x = 70;
            args.chart.tooltip.location.y = 52;
            args.chart.series[0].fill = 'url(#' + (selectedTheme.replace(/5.3/i, '5')) + '-gradient-chart)';
            if (args.chart.theme === 'Material3') {
                args.chart.series[0].border.color = '#6355C7';
            }
            else if (args.chart.theme === 'Material3Dark') {
                args.chart.series[0].border.color = '#4EAAFF';
            }
            else if (args.chart.theme === 'Fluent' || args.chart.theme === 'FluentDark') {
                args.chart.series[0].border.color = '#1AC9E6';
            }
            else if (args.chart.theme === 'Fluent2') {
                args.chart.series[0].border.color = '#6200EE';
            }
            else if (args.chart.theme === 'Fluent2Dark') {
                args.chart.series[0].border.color = '#9BB449';
            }
            else if (args.chart.theme === 'Bootstrap5' || args.chart.theme === 'Bootstrap5Dark') {
                args.chart.series[0].border.color = '#FD7E14';
            }
            else if (args.chart.theme === 'Tailwind') {
                args.chart.series[0].border.color = '#5A61F6';
            }
            else if (args.chart.theme === 'TailwindDark') {
