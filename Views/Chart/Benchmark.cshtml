@using Syncfusion.EJ2;
@section ControlsSection{
    <div>
        <div class="col-lg-12 control-section">
            <div class="content-wrapper" align="center">
                <div>
                    @Html.EJS().Chart("container").Series(series =>
               {
                   series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Area).
                   Name("Series").XName("x").YName("y").Border(br => br.Width(2).Color("BorderColor")).
                   Animation(an => an.Enable(false)).DataSource(ViewData["chartPoints"]).Fill("url(#fluent-gradient-chart)").Add();

               }).PrimaryXAxis(
                   xAxis =>
                   {
                       xAxis.ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).Interval(1).IntervalType(Syncfusion.EJ2.Charts.IntervalType.Years).Title("Years").MajorGridLines(mg => mg.Width(0));
                   }).PrimaryYAxis(
                   yAxis =>
                   {
                       yAxis.Interval(2000).Title("Values").Minimum(0).Maximum(12000).LineStyle(ls => ls.Width(0)).MajorTickLines(mt => mt.Width(0));
                   }).LegendSettings(
                    legend =>
                    {
                        legend.Visible(false);
                    }).ChartArea(area => area.Border(br => br.Width(0))
                    ).Title("Chart with 100k points").Load("onChartLoad").Render()
                </div>
            </div>
        </div>
    </div>

    @*custom code start*@
