@using Syncfusion.EJ2;
@section ControlsSection{
<script src="~/Scripts/theme-color.js"></script>
    <div class="control-section">
        <div style="text-align:center">
            @Html.EJS().Chart("container").Series(
    series =>
    {
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Bubble).
            XName("Literacy").
        YName("GDPGrowth").
        Size("BubbleSize").Border(br => br.Width(2)).
        Marker(mr=>mr.DataLabel(dl=>dl.Name("TooltipMappingName").Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Middle).Font(ff => ff.FontWeight("500").Color("#ffffff")))).
            MinRadius(3).
        MaxRadius(8).
            TooltipMappingName("Text").Name("Pound").DataSource(ViewData["ChartPoints"]).
            Add();
    }).PrimaryXAxis(
       xAxis =>
       {
           xAxis.Minimum(65).
            Maximum(102).
            Interval(5).
               CrossesAt(5);
       }).PrimaryYAxis(
       yAxis =>
       {
           yAxis.Minimum(0).
            Maximum(10).
            Interval(2.5).
               CrossesAt(85);
       }).Tooltip(
       tooltip =>
       {
           tooltip.Enable(true).
               EnableMarker(false).
               Header("<b>${point.tooltip}</b>").
           Format("Literacy Rate : <b>${point.x}%</b> <br/>GDP Annual Growth Rate : <b>${point.y}</b><br/>Population : <b>${point.size} Billion</b>");
       }).Title("World Countries Details").LegendSettings(
       legend =>
       {
           legend.Visible(false);
       }).Load("load").PointRender("pointRender").Render()

    </div>
</div>

@*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
<script>
    var pointRender = function (args) {
        bubblePointRender(args);
    };
    
    var load = function (args) {
        loadChartTheme(args);
        args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        args.chart.series[0].dataSource[2].TooltipMappingName = ej.base.Browser.isDevice ? "ID" : "Indonesia";
        args.chart.series[0].dataSource[4].TooltipMappingName = ej.base.Browser.isDevice ? "BR" : "Brazil";
        args.chart.series[0].dataSource[5].TooltipMappingName = ej.base.Browser.isDevice ? "DE" : "Germany";
        args.chart.series[0].dataSource[6].TooltipMappingName = ej.base.Browser.isDevice ? "EG" : "Egypt";
        args.chart.series[0].dataSource[8].TooltipMappingName = ej.base.Browser.isDevice ? "JP" : "Japan";
        args.chart.series[0].dataSource[12].TooltipMappingName = ej.base.Browser.isDevice ? "HK" : "Hong Kong";
        args.chart.series[0].dataSource[15].TooltipMappingName = ej.base.Browser.isDevice ? "AUS" : "Australia";
        args.chart.series[0].dataSource[17].TooltipMappingName = ej.base.Browser.isDevice ? "TW" : "Taiwan";                  
    };
</script>
}
