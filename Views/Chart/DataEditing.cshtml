@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/theme-color.js"></script>
    <div class="control-section">
        <div style="text-align:center">

            @Html.EJS().Chart("container").Series(series =>
           {

               series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column)
               .Marker(mr => mr.Visible(true).Width(7).Height(7))
               .XName("Period").YName("ProductA_Sales").Opacity(1).DataSource(ViewData["ConsumerDetails"]).Name("Renewable").Width(2).Add();

               series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Line)
               .Marker(mr => mr.Visible(true).Width(7).Height(7).IsFilled(true))
               .XName("Period").YName("ProductB_Sales").Opacity(1).DataSource(ViewData["ConsumerDetails"]).Name("Non-Renewable").Width(2).Add();

           }).PrimaryYAxis(px => px.Minimum(0).Maximum(100).Interval(20).LineStyle(ls => ls.Width(0)).MajorTickLines(mt => mt.Width(0)).LabelFormat("{value}B").Title("Production(Billion in kWh)").RangePadding(Syncfusion.EJ2.Charts.ChartRangePadding.None)
            ).PrimaryXAxis(px => px.ValueType(Syncfusion.EJ2.Charts.ValueType.Category).MajorGridLines(mg => mg.Width(0)).MajorTickLines(mt => mt.Width(0)).LabelFormat("yyyy").EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift).IntervalType(Syncfusion.EJ2.Charts.IntervalType.Years)
            ).Tooltip(tr => tr.Enable(false)
            ).ChartArea(area => area.Border(br => br.Width(0))
                ).LegendSettings(lg => lg.Visible(true)
            ).Title("Electricity - Production").Load("load").Render()
        </div>
    </div>

    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.series[0].dragSettings.enable = true;
            args.chart.series[1].dragSettings.enable = true;
        }
    </script>
}
