@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
        
@(Html.EJS().Chart("container")
    .Series(sr =>
    {
        sr.Type(Syncfusion.EJ2.Charts.ChartSeriesType.RangeColumn)
            .XName("Country")
            .High("High")
            .Low("Low")
            .ColumnSpacing(0.4).CornerRadius(cr => cr.TopLeft(4).TopRight(4).BottomRight(4).BottomLeft(4))
            .Marker(mr=>mr.DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Outer)))
            .DataSource(ViewData["ChartPoints"]).Add();
    })
      .PrimaryXAxis(xaxis =>
         xaxis.ValueType(Syncfusion.EJ2.Charts.ValueType.Category)
               .MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0)).LineStyle(ls => ls.Width(0))
               )
      .PrimaryYAxis(yaxis =>yaxis.EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift)
                 .LineStyle(ls=>ls.Width(0))
                 .MajorTickLines(mt=>mt.Width(0)).Minimum(0).Maximum(200).Interval(20)
                 .LabelFormat("{value}")
                 .Title("Growth in Visa-Free Destinations")
    )
      .Title("Global Passport Rankings: Growth in Visa-Free Access (2006â€“2024)").SubTitle("Source: wikipedia.org")
      .Tooltip(tp => tp.Enable(true).Format("${point.x}: <b>${point.low} - ${point.high}</b>").EnableMarker(true))
      .IsTransposed(true).ChartArea(area => area.Border(br => br.Width(0)))
      .Load("load").Render()
)
        </div>
    
 @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
@*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
