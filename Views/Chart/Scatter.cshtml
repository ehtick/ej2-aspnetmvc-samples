@using Syncfusion.EJ2;
@section ControlsSection{
<script src="~/Scripts/financial-data.js"></script>
<div class="control-section" align="center">
    
    @Html.EJS().Chart("container").Series(series =>
    {
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Scatter)
            .Marker(mr => mr.Visible(false).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Circle))
            .XName("Breadth").YName("Circumference").Width(2).DataSource(ViewData["Cluster1Value"]).Name("18-20 Years").Add();
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Scatter)
            .Marker(mr => mr.Visible(false).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Circle))
            .XName("Breadth").YName("Circumference").Width(2).DataSource(ViewData["Cluster2Value"]).Name("21-25 Years").Add();
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Scatter)
            .Marker(mr => mr.Visible(false).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Circle))
            .XName("Breadth").YName("Circumference").Width(2).DataSource(ViewData["Cluster3Value"]).Name("26-30 Years").Add();
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Scatter)
            .Marker(mr => mr.Visible(false).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Circle))
            .XName("Breadth").YName("Circumference").Width(2).DataSource(ViewData["Cluster4Value"]).Name("31-35 years").Add();
        series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Scatter)
            .Marker(mr => mr.Visible(false).Width(10).Height(10).Shape(Syncfusion.EJ2.Charts.ChartShape.Circle))
            .XName("Breadth").YName("Circumference").Width(2).DataSource(ViewData["Cluster5Value"]).Name("36+ Years").Add();
    }).PrimaryXAxis(px => px.Title("Shoulder Breadth (cm)").Minimum(40).Maximum(56).MajorGridLines(mg => mg.Width(0))
        ).PrimaryYAxis(py => py.Title("Bust Chest Circumference (cm)").MajorTickLines(mt => mt.Width(0)).Minimum(70).Maximum(140).Interval(10).RangePadding(Syncfusion.EJ2.Charts.ChartRangePadding.None)
            .LineStyle(ls => ls.Width(0))
        ).ChartArea(area => area.Border(br => br.Width(0))
        ).Tooltip(tt => tt.Enable(true)
        ).Load("load").LegendSettings(leg => leg.Visible(true).EnableHighlight(true)).Render()
</div>

@*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        };
    </script>
}
