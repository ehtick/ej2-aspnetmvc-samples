@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" style="text-align:center">


  @Html.EJS().Chart("container").Series(series =>
{
    series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).Fill("#1e90ff").XName("Over").YName("ENG_Score").Opacity(1).Width(2).ColumnSpacing(0.1)
    .Marker(mr =>mr.DataLabel(dl=>dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(ff => ff.FontWeight("600"))))
    .DataSource(ViewData["ChartPoints"]).Name("England").Add();
    series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.Column).Fill("#b22222").XName("Over").YName("WI_Score").Opacity(1).Width(2).ColumnSpacing(0.1)
    .Marker(mr => mr.DataLabel(dl => dl.Visible(true).Position(Syncfusion.EJ2.Charts.LabelPosition.Top).Font(ff => ff.FontWeight("600"))))
    .DataSource(ViewData["ChartPoints"]).Name("West Indies").Add();
}).PrimaryXAxis(px => px.Minimum(15).Maximum(21).Interval(1).MajorGridLines(mg=>mg.Width(0))
       ).PrimaryYAxis(py => py.MajorGridLines(mg=>mg.Width(0)).MajorTickLines(mt=>mt.Width(0)).LineStyle(ls=>ls.Width(0)).LabelStyle(ls=>ls.Color("transparent"))
       ).Title("England vs West Indies").ChartArea(area => area.Border(br => br.Width(0))).Tooltip(tl => tl.Enable(true).EnableHighlight(true).Format("${point.x}th Over : <b>${point.y} Runs</b>")
           ).LegendSettings(lg => lg.Visible(true).EnableHighlight(true)).Load("load").Render()
    </div>

 @*custom code start*@
<style>
    #control-container {
        padding: 0px !important;
    }
</style>
 @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        };
    </script>
}
 @*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Numeric Axis in ASP.NET MVC Chart control. Explore here for more details."/>
                }
 @*custom code end*@
