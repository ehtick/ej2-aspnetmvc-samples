    </svg>
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var data = dataValue;
        var seriesData = [];
        var point;
        var i;
        for (i = 0; i < data.length; i++) {
            point = { x: new Date(1941, i + 2, i), y: data[i] / 1000 - 0.5 };
            seriesData.push(point);
        }

        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "80%";
            args.chart.title = ej.base.Browser.isDevice ? "Monthly Temperature Anomalies" : "Global Warming: Monthly Temperature Anomalies";
            args.chart.titleStyle.textAlignment = ej.base.Browser.isDevice ? "Near" : "Center";
        };
    </script>
