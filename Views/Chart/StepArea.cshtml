@using Syncfusion.EJ2;
@section ControlsSection{
    <div class="control-section" align="center">
        
            @Html.EJS().Chart("container-vertical").Series(series =>
       {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StepArea).XName("Period").YName("RenewableResourcesProduction").Border(br => br.Width(2))
           .DataSource(ViewData["ChartPoints"]).Name("Renewable").Opacity(0.6).Add();
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.StepArea).XName("Period").YName("NonRenewableResourcesProduction").Border(br => br.Width(2))
           .Opacity(0.6).DataSource(ViewData["ChartPoints"]).Name("Non-Renewable").Width(2).Add();
       }).PrimaryXAxis(px => px.MajorGridLines(mg=>mg.Width(0)).EdgeLabelPlacement(Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift)
       ).PrimaryYAxis(py => py.LabelFormat("{value}B").MajorTickLines(mt=>mt.Width(0))
       .LineStyle(ls=>ls.Width(0)).Title("Production (Billion as kWh)")
       ).Title("Electricity - Production").ChartArea(area => area.Border(br => br.Width(0))).LegendSettings(leg => leg.EnableHighlight(true)).Tooltip(tt => tt.Enable(true).ShowNearestTooltip(true)).Load("load").Render()
        </div>
   
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
   @*custom code start*@
