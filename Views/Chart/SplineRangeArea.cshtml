@using Syncfusion.EJ2;
@section ControlsSection{
    <script src="~/Scripts/financial-data.js"></script>
    <div class="control-section">
        <div align="center" style="display:block; width: 92%">

            @Html.EJS().Chart("container-vertical").Series(series =>
       {
           series.Type(Syncfusion.EJ2.Charts.ChartSeriesType.SplineRangeArea).Border(br => br.Width(2)).Opacity(0.7).XName("x").High("high").Low("low").Marker(mr => mr.Visible(false)).DataSource("ChartPoints").Add();

       }).PrimaryXAxis(px => px.MajorGridLines(mg => mg.Width(0))
           .ValueType(Syncfusion.EJ2.Charts.ValueType.DateTime).LabelFormat("dd MMM")
          ).PrimaryYAxis(py => py.LabelFormat("{value}ËšC").Minimum(-10).Maximum(25).Interval(5).MajorTickLines(mt => mt.Width(0)).LineStyle(ls => ls.Width(0))
          ).Title("Temperature Variation by Month").ChartArea(area => area.Border(br => br.Width(0))).Load("load").Tooltip(tt => tt.Enable(true).ShowNearestTooltip(true).Format("Temperature : <b>${point.low} - ${point.high}</b>").Header("<b>${point.x}</b>")).LegendSettings(lg => lg.Visible(false)).Render()

        </div>
    </div>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
    <script src="~/Scripts/chart/theme-color.js"></script>
    <script>
        var ChartPoints = chartDataValues;
        var load = function (args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.edgeLabelPlacement = ej.base.Browser.isDevice ? 'Shift' : 'Hide';
        };
    </script>   
}
@*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Spline Range Area in ASP.NET MVC Chart control. Explore here for more details."/>
                }
@*custom code end*@
@section ActionDescription{
    <p>
        This <a target="_blank" href="https://www.syncfusion.com/aspnet-mvc-ui-controls/charts/chart-types/spline-range-area-chart" aria-label="ASP.NET MVC Spline Range Area Chart">ASP.NET MVC Spline Range Area Chart<span class="sr-only">opens in a new tab</span></a> example visualizes minimum and maximum temperatures of different days with default spline range area series.
    </p>
}
@section Description{
    <p>
        In this example, you can see how to render and configure the spline range area chart. This chart is used to display continuous data points as a set of curved lines varying between high and low values over a certain time period.
    </p>
