@using Syncfusion.EJ2
@using Syncfusion.EJ2.Inputs

@section ControlsSection{
    <div class="control-section">
        <div class="rating-control">
            @Html.EJS().Rating("rating").Value(3).AllowReset(true).Render()
        </div>
    </div>
}

<style>

    .rating-control {
        text-align: center;
        margin: 6% auto;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (document.getElementById('right-pane')) {
            document.getElementById('right-pane').addEventListener('scroll', hideTooltipOnScroll);
        }

        function hideTooltipOnScroll() {
            var tooltipElement = document.querySelector('.e-rating-tooltip');
            if (tooltipElement && ej.base.Browser.isDevice) {
                tooltipElement.style.display = 'none';
            }
        }
    });
</script>

@section Meta{
    <meta name="description" content="This example demonstrates the Keyboard Navigation in ASP.NET MVC Rating Control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This demo showcases the keyboard shortcuts applicable in the Rating control.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <i>The below key combinations can be used in Rating to perform various actions.</i>
        <ul>
            <li>
                <span class="key-class"><kbd>Tab</kbd></span>
                <span> - Focus.</span>
            </li>
            <li>
                <span class="key-class"><kbd>Left Arrow</kbd></span>
                <span> - Increase in RTL and decrease in LTR.</span>
            </li>
            <li>
                <span class="key-class"><kbd>Right Arrow</kbd></span>
                <span> - Decrease in RTL and increase in LTR.</span>
            </li>
            <li>
                <span class="key-class"><kbd>Down arrow</kbd></span>
                <span> - Decreases the value.</span>
            </li>
            <li>
                <span class="key-class"><kbd>Up arrow</kbd></span>
                <span> - Increases the value.</span>
            </li>
        </ul>
    </div>
}
@section Title{
    <title>ASP.NET MVC Rating Keyboard Navigation Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Keyboard Navigation in ASP.NET MVC Rating Control</h1>
}
