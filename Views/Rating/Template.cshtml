@using Syncfusion.EJ2
@using Syncfusion.EJ2.Inputs

@section ControlsSection{
    <div class="control-section">
        <div class="rating-control">
            <div class="rating-content">
                <label>Font Icon</label><br/>
                @Html.EJS().Rating("rating").Value(3).EmptyTemplate("<span class='custom-font sf-rating-heart'></span>").Render()
            </div>
            <div class="rating-content custom-svg">
                <label>SVG Icon</label><br />
                @Html.EJS().Rating("rating1").Value(3).EnableAnimation(false).EmptyTemplate("#emptyTemplate").FullTemplate("#fullTemplate").Render()
            </div>
            <div class="rating-content">
                <label>Emoji Icon</label><br />
                @Html.EJS().Rating("rating2").Value(3).EnableAnimation(false).EnableSingleSelection(true).EmptyTemplate("#template").Render()
            </div>
            <div class="rating-content">
                <label>Customization</label><br />
                @Html.EJS().Rating("rating3").Value(3).EnableAnimation(false).CssClass("custom-icon").Render()
            </div>
        </div>
    </div>
}

<script id="template" type="text/x-jsrender">
    ${if(index==0)}
    <span class='angry emoji'>&#128545;</span>${else if(index==1)}
    <span class='disagree emoji'>&#128577;</span>${else if(index==2)}
    <span class='neutral emoji'>&#128528;</span>${else if(index==3)}
    <span class='agree emoji'>&#128578;</span>${else}
    <span class='happy emoji'>&#128512;</span>
    ${/if}

</script>

<script type="text/x-jsrender" id="fullTemplate">
    <svg width="35" height="25" class="e-rating-svg-icon">
        <defs>
            <linearGradient id="grad${index}" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop class="start" offset="0%" />
                <stop class="end" offset="100%" />
            </linearGradient>
        </defs>
        <rect width="35" height="25" fill="url(#grad${index})" style="stroke-width:2;stroke:rgb(173,181,189)" />
    </svg>
</script>

<script type="text/x-jsrender" id="emptyTemplate">
    <svg width="35" height="25" class="e-rating-svg-icon">
        <rect width="35" height="25" fill="transparent" style="stroke-width:2;stroke:rgb(173,181,189)" />
    </svg>
</script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (document.getElementById('right-pane')) {
            document.getElementById('right-pane').addEventListener('scroll', hideTooltipOnScroll);
        }

        function hideTooltipOnScroll() {
            var tooltipElement = document.querySelector('.e-rating-tooltip');
            if (tooltipElement && ej.base.Browser.isDevice) {
                tooltipElement.style.display = 'none';
            }
        }
    });
</script>

<style>
    .rating-control .rating-content {
        width: 240px;
        margin: 15px 0;
        min-height: 75px;
        padding: 0;
        text-align: center;
    }

    .e-bigger .rating-control .rating-content {
        width: 260px;
        margin: 15px 0;
        min-height: 75px;
        padding: 0;
        text-align: center;
    }

    .rating-control {
        margin: 6% auto;
        max-width: 600px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .rating-control .e-rating-container .custom-font {
        background: linear-gradient(to right, rgb(254,87,133,255) var(--rating-value), transparent var(--rating-value));
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-text-stroke: 1px rgb(254,87,133,255)
    }

    .rating-control .custom-icon .e-icons:before {
        content: "\e700";
        font-family: 'sb_rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .rating-control .custom-svg .e-rating-item-container {
        padding: 0px;
    }

    .e-rating-item-container:not(.e-rating-selected) .emoji {
        filter: grayscale(1);
    }

    .e-rating-svg-icon #grad0 .start {
        stop-color: #FF0000;
    }

    .e-rating-svg-icon #grad0 .end,
    .e-rating-svg-icon #grad1 .start {
        stop-color: #ff5101;
    }

    .e-rating-svg-icon #grad1 .end,
    .e-rating-svg-icon #grad2 .start {
        stop-color: #ffc801;
    }

    .e-rating-svg-icon #grad2 .end,
    .e-rating-svg-icon #grad3 .start {
        stop-color: #dbe300;
    }

    .e-rating-svg-icon #grad3 .end,
    .e-rating-svg-icon #grad4 .start {
        stop-color: #8bc301;
    }

    .e-rating-svg-icon #grad4 .end {
        stop-color: #4eaa01;
    }

    @@font-face {
        font-family: 'rating';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    [class^="sf-rating-"], [class*=" sf-rating-"] {
        font-family: 'rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .sf-rating-heart:before {
        content: "\e702";
    }

    @@font-face {
        font-family: 'sb_rating';
        src:
        url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    [class^="sf-icon-"], [class*=" sf-icon-"] {
        font-family: 'sb_rating' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .sf-icon-star:before { 
        content: "\e700"; 
    }
</style>

@section Meta{
    <meta name="description" content="This example demonstrates the Template in ASP.NET MVC Rating Control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates customization of rating items using templates in the ASP.NET MVC Rating control.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            In this example, rating item stars are customized using <code>EmptyTemplate</code>, which defines the unrated items’ appearance, and <code>FullTemplate</code>, which defines the rated items’ appearance.
        </p>
    </div>
}
@section Title{
    <title>ASP.NET MVC Rating Template Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Template in ASP.NET MVC Rating Control</h1>
}
