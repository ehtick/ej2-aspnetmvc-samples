                    <title>ASP.NET MVC Gantt Taskbar Template Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Taskbar Template in ASP.NET MVC Gantt Control</h1>
                }
