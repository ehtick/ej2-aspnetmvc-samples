@using Syncfusion.EJ2
@using Syncfusion.EJ2.Buttons
@section ControlsSection{
    <div class="control-section">
        <div id="target" class="speeddial-default-target custom-index">
            @Html.EJS().SpeedDial("Default").Target("#target").HtmlAttributes(new Dictionary<string, object>() { { "title", "Menu" } }).OpenIconCss("e-icons e-justify").CloseIconCss("e-icons e-close").Position(FabPosition.BottomCenter).Items((List<SpeedDialItem>)ViewData["datasource"]).Render()
        </div>
    </div>
}
<style>
    .speeddial-default-target {
        min-height: 300px;
        position: relative;
        margin-bottom: 35px;
    }

    .custom-index {
        z-index: 500 !important;
    }
</style>


@section Meta{
    <meta name="description" content="This example demonstrates the Default Functionalities in ASP.NET MVC Speeddial control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the default functionalities of the Speed Dial component. Speed Dial is an transition type of FAB which displays a list of action buttons when clicked. </p>
    </div>
}
@section Description{
    <div id="description">
        <p>The Speed Dial component used to display multiple action items for the floating action button. It is useful when there are more than one primary action on the page. The Speed Dial displays action items in linear and radial directions. </p>
    </div>
}
@section Title{
    <title>ASP.NET MVC Speed Dial DefaultFunctionalities Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of DefaultFunctionalities in ASP.NET MVC Speed Dial Control</h1>
}