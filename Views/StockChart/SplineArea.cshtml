        var load = function (args) {
            args.stockChart.seriesType = [];
            args.stockChart.indicatorType = [];
            var selectedTheme = loadStockChartTheme(args);
            args.stockChart.series[0].fill = 'url(#' + selectedTheme + '-gradient-chart)';
            args.stockChart.series[0].border = { width: 2, color: window.borderColor[window.themes.indexOf(args.stockChart.theme.toLowerCase())] };
