@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <div class="control_wrapper accordion-control-section">
            @Html.EJS().Accordion("defaultAccordion").Items((List<Syncfusion.EJ2.Navigations.AccordionItem>)ViewData["accordionItems"]).Render()
        </div>
    </div>
}

@section ActionDescription{
    <p>
        This sample demonstrates the default functionalities of the <code>Accordion</code>. Click on the <code>header</code> element to expand/collapse the corresponding Accordion panel, and displays its content.
    </p>
}

@section Description{
    <p>
        The Accordion is a vertically collapsible content panel which is displaying panels, one or multiple at a time within the available space. This sample illustrates the simple Accordion rendering with <code>multiple</code> expand mode.
    </p>
    <p>
        More information about Accordion can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/accordion/getting-started-asp-mvc/" aria-label="documentation"> documentation <span class="sr-only">opens in a new tab</span></a> section.
    </p>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Default Functionalities in ASP.NET MVC Accordion control. Explore here for more details."/>
                }

@*custom code start*@
<style>
    .accordion-control-section {
        margin: 0 10% 0 10%;
    }

    @@media screen and (max-width: 768px) {
        .accordion-control-section {
            margin: 0;
        }
    }
</style>
@*custom code end*@

@section Title{
                    <title>ASP.NET MVC Accordion Default Functionalities Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Default Functionalities in ASP.NET MVC Accordion Control</h1>
                }