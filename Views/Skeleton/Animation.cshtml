                        <div id="cardRightOptn" style="min-width:20%;"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <h5>Pulse Effect</h5>
                <br />
                <div class="skeleton-listcard e-card">
                    @Html.EJS().ListView("skeleton-listview").Template(template).Fields(new ListViewFieldSettings { Text = "text" }).SortOrder(Syncfusion.EJ2.Lists.SortOrder.Ascending).Height("420px").CssClass("e-list-template").Render()
                    <ul id="skeleton-list">
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
                            <div>
                                <div class="listCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div><br />
                                <div class="distCtn e-skeleton e-skeleton-text e-shimmer-pulse"></div>
                            </div>
                        </li>
                        <li>
                            <div class="listProfile e-skeleton e-skeleton-circle e-shimmer-pulse"></div>
