@section PreScripts {
    <script>
    var lessContent = 'On October 17, Microsoft will release its Fall Creators Update for the Windows 10 platform. Much like its previous counter part, the Spring Creators Update, the release is set to deliver more features to Windows 10 for both developers and users with particular emphasis this time around on app modernization, mixed reality and game development and software updates. App modernization is the term Microsoft used in its press event to encompass the features that will affect most Windows 10 users and developers. The updates primarily serve to makeusing Windows 10';
    var btnEle = document.getElementById('dialogBtn'), dialogObj;
    function dlgButtonClick() {
        if (document.querySelector('.e-footer-content .e-btn').textContent === 'More Details') {
            var fetchApi = new ej.base.Fetch(baseurl + 'Content/Dialog/blog.html', 'GET');
            fetchApi.send().then();
            fetchApi.onSuccess = function (data) {
                dialogObj.content = data;
            };
            dialogObj.buttons = [{ click: dlgButtonClick, buttonModel: { content: 'Less Details', isPrimary: true } }];
        }
        else {
            dialogObj.content = lessContent;
            dialogObj.buttons = [{ click: dlgButtonClick, buttonModel: { content: 'More Details', isPrimary: true } }];
        }
    }
    function dialogClose() {
        btnEle.style.display = 'inline-block';
    }
    function dialogOpen() {
        btnEle.style.display = 'none';
    }
    btnEle.onclick = function () {
        dialogObj.show();
    };
    function created() {
        dialogObj = this;
    }
    </script>
}
@section ActionDescription{
    <div id="action-description">
        <p>
            This example demonstrates that the content of dialog can be loaded from external HTML file. Click "more details" on dialog to load the content dynamically from external HTML file. Click “open” to show the dialog again, if it is closed.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            The user can load dialog's content dynamically from external source like external file using Fetch library. The Fetch library can make the request and load dialog's content using its success event.
        </p>
    </div>
}

