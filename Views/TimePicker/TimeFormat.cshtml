@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <div class="control_wrapper">
            <div class="tabs-wrap">
                <div class="wrap">
                    @Html.EJS().TimePicker("timepicker").Format("HH:mm").Step(60).Value(ViewData["value"]).Render()
                </div>
            </div>
        </div>
    </div>
}
    @*custom code start*@

<style>
    #wrapper {
        margin: 0 auto;
    }

    .control_wrapper {
        margin: 0 auto;
        display: block;
        max-width: 300px;
        padding: 5% 0;
    }

    .tabs-wrap {
        padding: 0px 0px 10px;
    }

    .e-bigger .control-section {
        margin-top: 60px;
    }

    .btn-wrap {
        padding: 20px 0px 10px;
    }
</style>
    @*custom code end*@

@section ActionDescription{
    <div id="action-description">
        <p>
            The TimePicker has been customized with 24-hour format with 60 minutes <code>interval</code>. Click/Touch the TimePicker popup icon to a select a time from 00:00 to 23:00 from the TimePicker popup.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            TimePicker provides an option to customize the display format of the time value using the
            <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/timepicker/getting-started-mvc/#setting-the-time-format" target="_blank" aria-label="format">format<span class="sr-only">opens in a new tab</span></a>        property. It accepts <a href="https://docs.microsoft.com/en-us/dotnet/standard/base-types/standard-date-and-time-format-strings"
                                                                                                                                                                                target="_blank">standard<span class="sr-only">opens in a new tab</span></a> &
            <a href="https://docs.microsoft.com/en-us/dotnet/standard/base-types/custom-date-and-time-format-strings" rel="nofollow" target="_blank" aria-label="custom date and time format strings"> custom date and time format strings<span class="sr-only">opens in a new tab</span></a>        as specified in MSDN.
        </p>
        <p>
            Here, the time value displayed in 24-hour format with <code> 60 </code> minute step interval. To know more about custom time formatting, refer the
            <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/base/intl.html#custom-formats" target="_blank" aria-label="Parsing and formatting"> Parsing and formatting<span class="sr-only">opens in a new tab</span></a>        section. By default, TimePicker component is formatted with `en` (English) culture.
        </p>
        <p>
            More information about the TimePicker and it's configuration can be found in the
            <a href="https://ej2.syncfusion.com/aspnetmvc/documentation/timepicker/getting-started-mvc/" target="_blank" aria-label="documentation section"> documentation section<span class="sr-only">opens in a new tab</span></a>.
        </p>
    </div>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Time Format in ASP.NET MVC TimePicker control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET MVC TimePicker Time Format Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Time Format in ASP.NET MVC TimePicker Control</h1>
                }