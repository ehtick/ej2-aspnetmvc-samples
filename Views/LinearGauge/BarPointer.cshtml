@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12"
                 style="display: flex;justify-content: center; align-items: center;">
                <div style="margin: auto;padding: 10px;">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <div id='horizontal' style="padding:6px;cursor:pointer;width:86px;color:black;font-size:15px;border:1px solid #0074E3;background-color:white;text-align:center">Horizontal</div>
                                </td>
                                <td>
                                    <div id='vertical' style="padding:6px;cursor:pointer;width:86px;color:white;font-size:15px;border:1px solid #0074E3;background-color: #0074E3;text-align:center">Vertical</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <pre style="background-color: inherit; border:hidden"></pre>
        <div id="containerBox" style="float: left;padding: 4%;"></div>
        <div id='containerOutside' class="col-xs-4 col-sm-4 col-lg-2 col-md-2" style="display: flex;justify-content: center; align-items: center;">
            @Html.EJS().LinearGauge("outsideBar").Load("gaugeLoad").AnimationDuration(3500).Background("Transparent").Width("150px").Height("350px").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Title("Outside").TitleStyle(textStyle => 
            textStyle.FontFamily("inherit").FontWeight("499")).Axes(axes => axes.Minimum(0).Maximum(100).OpposedPosition(true).Line(line => line.Width(5)).LabelStyle(labelStyle => labelStyle.Font(font => font.FontFamily("inherit")))
            .Pointers(pointer => pointer.Width(5).Height(5).Value(70).Color("#0074E3").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Outside).AnimationDuration(1500).Add())
            .MajorTicks(majorTick => majorTick.Interval(20).Height(7).Width(1)).MinorTicks(minorTick => minorTick.Height(3).Interval(10)).Add()).Render()
        </div>
        <div id='containerCross' class="col-xs-4 col-sm-4 col-lg-2 col-md-2" style="display: flex;justify-content: center; align-items: center;">
            @Html.EJS().LinearGauge("crossBar").Load("gaugeLoad").AnimationDuration(3500).Background("Transparent").Width("150px").Height("350px").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Title("Cross").TitleStyle(textStyle => 
            textStyle.FontFamily("inherit").FontWeight("499")).Axes(axes => axes.Minimum(0).Maximum(100).OpposedPosition(true).Line(line => line.Width(5)).LabelStyle(labelStyle => labelStyle.Font(font => font.FontFamily("inherit")))
            .Pointers(pointer => pointer.Width(5).Height(5).Value(70).Color("#0074E3").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Cross).AnimationDuration(1500).Add())
            .MajorTicks(majorTick => majorTick.Interval(20).Height(7).Width(1)).MinorTicks(minorTick => minorTick.Height(3).Interval(10)).Add()).Render()
        </div>
        <div id='containerInside' class="col-xs-4 col-sm-4 col-lg-2 col-md-2" style="display: flex;justify-content: center; align-items: center;">
            @Html.EJS().LinearGauge("insideBar").Load("gaugeLoad").AnimationDuration(3500).Background("Transparent").Width("150px").Height("350px").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Title("Inside").TitleStyle(textStyle => 
            textStyle.FontFamily("inherit").FontWeight("499")).Axes(axes => axes.Minimum(0).Maximum(100).OpposedPosition(true).Line(line => line.Width(5)).LabelStyle(labelStyle => labelStyle.Font(font => font.FontFamily("inherit")))
           .Pointers(pointer => pointer.Width(5).Height(5).Value(70).Color("#0074E3").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Inside).AnimationDuration(1500).Add())
          .MajorTicks(majorTick => majorTick.Interval(20).Height(7).Width(1)).MinorTicks(minorTick => minorTick.Height(3).Interval(10)).Add()).Render()
        </div>
        <div id='containerGradient' class="col-xs-4 col-sm-4 col-lg-2 col-md-2" style="display: flex;justify-content: center; align-items: center;">
            @Html.EJS().LinearGauge("gradientBar").Load("gaugeLoad").AnimationDuration(3500).Background("Transparent").Width("150px").Height("350px").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Title("Gradient shader").TitleStyle(textStyle => 
            textStyle.FontFamily("inherit").FontWeight("499")).Axes(axes => axes.Minimum(0).Maximum(100).OpposedPosition(true).Line(line => line.Width(5)).LabelStyle(labelStyle => labelStyle.Font(font => font.FontFamily("inherit")))
            .Pointers(pointer => pointer.Width(5).Height(5).Value(70).Offset(2).Color("#0074E3").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Outside).AnimationDuration(1500)
            .Add()).MajorTicks(majorTick => majorTick.Interval(20).Height(7).Width(1)).MinorTicks(minorTick => minorTick.Height(3).Interval(10)).Add()).Render()
        </div>
        <div id='containerMultiple' class="col-xs-4 col-sm-4 col-lg-2 col-md-2" style="display: flex;justify-content: center; align-items: center;">
            @Html.EJS().LinearGauge("multipleBar").Load("gaugeLoad").AnimationDuration(3500).Background("Transparent").Width("150px").Height("350px").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Title("Multiple bar pointers").TitleStyle(textStyle => 
            textStyle.FontFamily("inherit").FontWeight("499")).Axes(axes => axes.Minimum(0).Maximum(100).OpposedPosition(true).Line(line => line.Width(5)).LabelStyle(labelStyle => labelStyle.Font(font => font.FontFamily("inherit")))
            .Pointers(pointer => { pointer.Width(5).Height(5).Value(10).Color("#0074E3").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Inside).AnimationDuration(1500).Add();
                pointer.Width(5).Height(5).Value(70).Color("red").Placement(Syncfusion.EJ2.LinearGauge.Placement.Near).Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Position(Syncfusion.EJ2.LinearGauge.Position.Outside).AnimationDuration(1500).Add();})
            .MajorTicks(majorTick => majorTick.Interval(20).Height(7).Width(1)).MinorTicks(minorTick => minorTick.Height(3).Interval(10)).Add()).Render()
        </div>
    </div>
    <!-- custom code start -->
    <style>
        .control-section {
            min-height: 450px;
        }
    </style>
    <!-- custom code end -->
    <script type="text/javascript">
        var outsideBarGauge, crossBarGauge, insideBarGauge, gradientBarGauge, multipleBarGauge;
        var pointerLinearGradient = {
            startValue: '0%',
            endValue: '100%',
            colorStop: [
                { color: '#FB7D55', offset: '0%', opacity: 1 },
                { color: '#ECC85B', offset: '50%', opacity: 1 },
                { color: '#6FC78A', offset: '100%', opacity: 1 }]
        };

        function gaugeLoad(sender) {
            @* custom code start *@
            var selectedTheme = themeName ? themeName : 'Material';
            sender.gauge.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/-high/i, 'High').replace(/contrast/i, 'Contrast').replace(/5.3/i, '5');
            @* custom code end *@
            if (sender.gauge.element.id === 'outsideBar') {
                outsideBarGauge = sender.gauge;
            }
            if (sender.gauge.element.id === 'crossBar') {
                crossBarGauge = sender.gauge;
            }
            if (sender.gauge.element.id === 'insideBar') {
                insideBarGauge = sender.gauge;
            }
            if (sender.gauge.element.id === 'gradientBar') {
                gradientBarGauge = sender.gauge;
                gradientBarGauge.axes[0].pointers[0].linearGradient = pointerLinearGradient;
            }
            if (sender.gauge.element.id === 'multipleBar') {
                multipleBarGauge = sender.gauge;
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById('horizontal').addEventListener('click', function () {
                outsideBarGauge.width = crossBarGauge.width = insideBarGauge.width = gradientBarGauge.width = multipleBarGauge.width = '450px';
                outsideBarGauge.height = crossBarGauge.height = insideBarGauge.height = gradientBarGauge.height = multipleBarGauge.height = '150px';
                outsideBarGauge.orientation = crossBarGauge.orientation = insideBarGauge.orientation = gradientBarGauge.orientation = multipleBarGauge.orientation = "Horizontal";
                document.getElementById('horizontal').style.color = "white";
                document.getElementById('horizontal').style.backgroundColor = "#0074E3";
                document.getElementById('vertical').style.color = "black";
                document.getElementById('vertical').style.backgroundColor = "white";
                document.getElementById('containerOutside').className = document.getElementById('containerCross').className =
                    document.getElementById('containerInside').className = document.getElementById('containerGradient').className =
                    document.getElementById('containerMultiple').className = "col-xs-12 col-sm-12 col-lg-12 col-md-12";
                document.getElementById('containerBox').style.padding = "0%";

            });
            document.getElementById('vertical').addEventListener('click', function () {
                outsideBarGauge.width = crossBarGauge.width = insideBarGauge.width = gradientBarGauge.width = multipleBarGauge.width = '150px';
                outsideBarGauge.height = crossBarGauge.height = insideBarGauge.height = gradientBarGauge.height = multipleBarGauge.height = '350px';
                outsideBarGauge.orientation = crossBarGauge.orientation = insideBarGauge.orientation = gradientBarGauge.orientation = multipleBarGauge.orientation = "Vertical";
                document.getElementById('vertical').style.color = "white";
                document.getElementById('vertical').style.backgroundColor = "#0074E3";
                document.getElementById('horizontal')['style']['color'] = "black";
                document.getElementById('horizontal')['style']['backgroundColor'] = "white";
                document.getElementById('containerOutside').className = document.getElementById('containerCross').className =
                    document.getElementById('containerInside').className = document.getElementById('containerGradient').className =
                    document.getElementById('containerMultiple').className = "col-xs-4 col-sm-4 col-lg-2 col-md-2";
                document.getElementById('containerBox').style.padding = "4%";

            });
        });
    </script>
}

