@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <div style="display: flex; justify-content: center;padding-top: 12px;">
            <div style="padding:6px">
                @Html.EJS().LinearGauge("containerOne").Load("gaugeLoad").Width("60px").Height("350px").Background("Transparent").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Container(
                container => container.Width(30).RoundedCornerRadius(15).Type(Syncfusion.EJ2.LinearGauge.ContainerType.RoundedRectangle).BackgroundColor("Transparent")).Annotations(annotation =>
                {
                    annotation.AxisIndex(0).AxisValue(100).X(1).Y(0).ZIndex("1").Add();
                    annotation.AxisIndex(0).AxisValue(11).X(9).Y(1).ZIndex("1").Content("<div class='sf-icon-music' style='width:16px'></div>").Add();
                }).Axes(axes => axes.Minimum(0).Maximum(100).Line(line => line.Width(0)).LabelStyle(labelStyle => labelStyle.Font(font => font.Size("0px")))
                .Pointers(pointer => pointer.Width(30).Value(100).Color("#0074E3").Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Offset("-15").RoundedCornerRadius(15).Position(Syncfusion.EJ2.LinearGauge.Position.Cross).Add())
                .MajorTicks(majorTick => majorTick.Interval(20).Height(10).Color("Transparent")).MinorTicks(minorTick => minorTick.Height(0).Interval(10).Color("Transparent")).Add()).Render()
            </div>
            <div style="padding:6px">
                @Html.EJS().LinearGauge("containerTwo").Load("gaugeLoad").Width("60px").Height("350px").Background("Transparent").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Container(
                container => container.Width(30).RoundedCornerRadius(15).Type(Syncfusion.EJ2.LinearGauge.ContainerType.RoundedRectangle).BackgroundColor("Transparent")).Annotations(annotation =>
                {
                    annotation.AxisIndex(0).AxisValue(100).X(1).Y(0).ZIndex("1").Add();
                    annotation.AxisIndex(0).AxisValue(11).X(9).Y(1).ZIndex("1").Content("<div class='sf-icon-bell' style='width:16px'></div>").Add();
                }).Axes(axes => axes.Minimum(0).Maximum(100).Line(line => line.Width(0)).LabelStyle(labelStyle => labelStyle.Font(font => font.Size("0px")))
                .Pointers(pointer => pointer.Width(30).Value(85).Color("#0074E3").Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Offset("-15").RoundedCornerRadius(15).Position(Syncfusion.EJ2.LinearGauge.Position.Cross).Add())
                .MajorTicks(majorTick => majorTick.Interval(20).Height(10).Color("Transparent")).MinorTicks(minorTick => minorTick.Height(0).Interval(10).Color("Transparent")).Add()).Render()
            </div>
            <div style="padding:6px">
                @Html.EJS().LinearGauge("containerThree").Load("gaugeLoad").Width("60px").Height("350px").Background("Transparent").Orientation(Syncfusion.EJ2.LinearGauge.Orientation.Vertical).Container(
                container => container.Width(30).RoundedCornerRadius(15).Type(Syncfusion.EJ2.LinearGauge.ContainerType.RoundedRectangle).BackgroundColor("Transparent")).Annotations(annotation =>
                {
                    annotation.AxisIndex(0).AxisValue(100).X(1).Y(0).ZIndex("1").Add();
                    annotation.AxisIndex(0).AxisValue(11).X(9).Y(1).ZIndex("1").Content("<div class='sf-icon-clock' style='width:16px'></div>").Add();
                }).Axes(axes => axes.Minimum(0).Maximum(100).Line(line => line.Width(0)).LabelStyle(labelStyle => labelStyle.Font(font => font.Size("0px")))
                .Pointers(pointer => pointer.Width(30).Value(65).Color("#0074E3").Type(Syncfusion.EJ2.LinearGauge.Point.Bar).Offset("-15").RoundedCornerRadius(15).Position(Syncfusion.EJ2.LinearGauge.Position.Cross).Add())
                .MajorTicks(majorTick => majorTick.Interval(20).Height(10).Color("Transparent")).MinorTicks(minorTick => minorTick.Height(0).Interval(10).Color("Transparent")).Add()).Render()
            </div>
        </div>
    </div>
    <style>
        @@font-face {
            font-family: 'font-v1';
            src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        [class^="sf-icon-"],
        [class*=" sf-icon-"] {
            font-family: 'font-v1' !important;
            color: white;
            speak: none;
            font-size: 16px;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            margin-left: 40%;
            margin-top: 70%;
        }

        .sf-icon-music:before {
            content: "\e701";
        }

        .sf-icon-clock:before {
            content: "\e702";
        }

        .sf-icon-bell:before {
            content: "\e706";
        }
    </style>

    <script type="text/javascript">
        var textColor = '#000000';
        function gaugeLoad(sender) {
            @* custom code start *@
            var selectedTheme = themeName ? themeName : 'Material';
            sender.gauge.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, "Dark").replace(/-high/i, 'High').replace(/contrast/i, 'Contrast').replace(/5.3/i, '5');
            @* custom code end *@
            textColor = sender.gauge.theme.indexOf('Dark') > -1 || sender.gauge.theme.indexOf('HighContrast') > -1 ? '#FFFFFF' : '#000000';
            if (sender.gauge.element.id === 'containerOne') {
                sender.gauge.annotations[0].content = "<div style='width: 70px; font-size: 16px; margin-left: 64px; margin-top: -31px; color: " + textColor + ";font-family:inherit'>100%</div>";
            }
            if (sender.gauge.element.id === 'containerTwo') {
                sender.gauge.annotations[0].content = "<div style='width: 70px; font-size: 16px; margin-left: 73px; margin-top: -31px; color:" + textColor + "; font - family:inherit'> 85%</div>";
            }
            if (sender.gauge.element.id === 'containerThree') {
                sender.gauge.annotations[0].content = "<div style='width: 70px; font-size: 16px; margin-left: 71px; margin-top: -31px; color:" + textColor + "; font-family:inherit'>65%</div>";
            }
        }
    </script>
}

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates volume adjustments made for music/video and alarm clock applications.
        </p>
    </div>
}
@section Meta{
    <meta name="description" content="This example demonstrates the Volume Settings in ASP.NET MVC Linear Gauge control. Explore here for more details." />
}
@section Description{
    <div id="description">
        <p>
            In this example, you can see how to render and configure a linear gauge to look like a sound tracker. This can be accomplished by combining axis, pointer and annotation.
        </p>
        <p>
            More information on the linear gauge can be found in this
            <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/linear-gauge/getting-started" aria-label="documentation section" >documentation section<span class="sr-only">opens in a new tab</span></a>.
        </p>
    </div>

}

@section Title{
    <title>ASP.NET MVC Linear Gauge Volume Settings Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Volume Settings in ASP.NET MVC Linear Gauge Control</h1>
}