@using Syncfusion.EJ2
@using EJ2MVCSampleBrowser.Models
@using Syncfusion.EJ2.DropDowns;

@section ControlsSection{
    <div class="col-lg-8 control-section">
        <div id="wrapper" class="datetimepicker-section">
            <div id="datetimepicker-control">
                @(Html.EJS().DateTimePicker("datetimepicker")
                    .Placeholder("Choose a Date and Time")
                    .ShowClearButton(true)
                    .Value(DateTime.Now)
                    .Format("dd-MMM-yy hh:mm a")
                    .InputFormats(new string[] { "MM.dd.yyyy hh:mm a", "yyyy-MM-dd HH:mm" })
                    .Render())
            </div>
        </div>
    </div>

    <div id="propertySection" class="col-lg-4 property-section">
        <div class="dropdown-control" id="property" title="Properties">
             <div class="row">
                 <label class='example-label'>Choose a display format</label>
                 @(Html.EJS().DropDownList("displayFormatDateTimePicker")
                    .Placeholder("Select a format")
                    .Value("format1")
                            .DataSource((IEnumerable<DateTimeFormats>)ViewData["data"])
                    .Fields(new Syncfusion.EJ2.DropDowns.DropDownListFieldSettings { Text = "Text", Value = "Id" })
                    .Change("changeDateTimeFormat")
                    .Render())
             </div>
             <div class="row">
                 <label class='multi-label'>Choose input formats</label>
                 @(Html.EJS().MultiSelect("inputFormatsDateTimePicker")
                    .Placeholder("e.g. MM.dd.yyyy hh:mm a")
                    .Value(new string[] { "MM.dd.yyyy hh:mm a", "yyyy-MM-dd HH:mm" })
                            .DataSource((string[])ViewData["formatData"])
                    .Mode(Syncfusion.EJ2.DropDowns.VisualMode.CheckBox)
                    .ShowSelectAll(true)
                    .Change("changeInputFormats")
                    .Render())
             </div>
        </div>
    </div>
}

<script>
    function changeDateTimeFormat(args) {
        var datetimepicker = document.getElementById('datetimepicker').ej2_instances[0];
        datetimepicker.format = args.itemData.Text;
    }

    function changeInputFormats(args) {
        var datetimepicker = document.getElementById('datetimepicker').ej2_instances[0];
        datetimepicker.inputFormats = args.value;
    }
</script>

@*custom code start*@
<style>
    datetimepicker-control {
        max-width: 300px;
        margin: 0 auto;
        padding-top: 50px;
    }

    #wrapper {
        max-width: 350px;
        margin: 20px auto;
    }

    .multi-label {
        margin-top: 45px;
    }
</style>
@*custom code end*@



@section ActionDescription{
    <div id="action-description">
        <p>
            In this sample, the DateTimePicker has been configured with the
            <code>dd-MMM-yy hh:mm a</code> date time format.
            To change this current date time format, go to the properties panel at the right side and select a date format from the available options.
            For mobile mode touch the icon at the right side and select a date time format from the available options.
        </p>
    </div>
}
