@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@section ControlsSection{
    <div class="col-lg-8 control-section dropdowntree-default">
        <div class="control-wrapper">
            @Html.EJS().DropDownTree("ddt").Placeholder("Select items").Mode(Mode.Delimiter).ShowCheckBox(true).PopupHeight("200px").Fields((DropDownTreeFields)ViewData["checkboxFields"]).Render()
        </div>
    </div>
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties">
            <tbody>
                <tr>
                    <td style="padding-right: 10px">
                        <div style="padding-left: 0;padding-top: 0">
                            @Html.EJS().CheckBox("select").Checked(false).Label("Auto Check").Change("onChange").Render()
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <script type="text/javascript">
        function onChange(args) {
            var ddt = document.getElementById("ddt");
            ddt.ej2_instances[0].treeSettings.autoCheck = args.checked;
        }
    </script>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Checkbox in ASP.NET MVC Dropdown Tree control. Explore here for more details."/>
                }
