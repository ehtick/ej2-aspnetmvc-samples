@using Syncfusion.EJ2;
@using Syncfusion.EJ2.Charts
@section ControlsSection{
    <div class="control-section">
        <div id="spark-container" class="row">
            <div class="cols-sample-area" align="center">
                <table style="width:80%;">
                    <tbody>
                        <tr>
                            <td align="center">
                                <div>Mean working hours for a month</div>
                                <div><i>(DateTime axis)</i></div>
                            </td>
                            <td style="padding: 10px;" align="center">
                                <div id="datetime" style="width:170px; height:100px">
                                    @Html.EJS().Sparkline("datetime").Load("load").Height("100px").Width("170px").LineWidth(1).Fill("#3C78EF").Type(SparklineType.Column).ValueType(SparklineValueType.DateTime).TooltipSettings(tool => tool.Visible(true).Format("${xDate} : ${yval}hrs")).XName("xDate").YName("yval").DataSource(ViewData["datetime"]).Render()
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td align="center">
                                <div>Percentage of the students in a class</div>
                                <div><i>(Category axis)</i></div>
                            </td>
                            <td style="padding: 10px;" align="center">
                                <div id="category" style="width:170px; height:100px">
                                    @Html.EJS().Sparkline("category").Load("load").Height("100px").Width("170px").LineWidth(1).Fill("#3C78EF").Type(SparklineType.Column).ValueType(SparklineValueType.Category).TooltipSettings(tool => tool.Visible(true).Format("${xval} : ${yval}%")).XName("xval").YName("yval").DataSource(ViewData["category"]).Render()
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td align="center">
                                <div>Expenditure details of various trips</div>
                                <div><i>(Numeric axis)</i></div>
                            </td>
                            <td style="padding: 10px;" align="center">
                                <div id="numeric" style="width:170px; height:100px">
                                    @Html.EJS().Sparkline("numeric").Load("load").Height("100px").Width("170px").LineWidth(1).Fill("#3C78EF").Type(SparklineType.Column).ValueType(SparklineValueType.Numeric).TooltipSettings(tool => tool.Visible(true).Format("${x} : $${yval}")).XName("x").YName("yval").DataSource(ViewData["numeric"]).Render()
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="~/Scripts/Sparkline/theme-color.js"></script>
    <script>
        function load(args) {
            loadSparkLineTheme(args);
        }
    </script>



    <style>
        td {
            font-family: "Roboto", "Segoe UI", "GeezaPro", "DejaVu Serif", "sans-serif";
            font-size: 14px;
            font-weight: 500;
        }
    </style>
}
@section ActionDescription{
    <p>
        This sample depicts the various types of axis value types available in sparkline.
    </p>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Axis value types in ASP.NET MVC Sparkline Charts control. Explore here for more details."/>
                }
@section Description{
    <p>
        In this example, you can see the sparklines with various axis value types such as date-time, category and numeric. Tooltip is enabled in this example. To see the tooltip in action, hover the mouse over the data points or tap on a data point in touch enabled devices.
    </p>
}


@section Title{
                    <title>ASP.NET MVC Sparkline Charts Axis value types Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Axis value types in ASP.NET MVC Sparkline Charts Control</h1>
                }