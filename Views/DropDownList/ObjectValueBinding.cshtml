@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@model EJ2MVCSampleBrowser.Controllers.DropDownListRecord
@section ControlsSection{
    <div class="col-lg-8 control-section">
        <div class="control-wrapper">
            <div id="default" style='padding-top:75px;'>
                @Html.EJS().DropDownList("object").Placeholder("Select a Item").PopupHeight("200px").Change("valueChange").DataSource(@Model.RecordList).AllowObjectBinding(true).Fields(new DropDownListFieldSettings { Text = "Text", Value = "ID" }).Render()
            </div>
        </div>
    </div>
    <div class="col-lg-4 property-section">
        <textarea id="value" title="Properties" style="width: 100%; margin-top:90px; height: 60px; background-color: inherit;" readonly>Selected value : </textarea>
    </div>

    @*custom code start*@
    <style>
        .control-wrapper {
            margin: 0 auto;
            width: 250px;
        }

        .property-section .right-side {
            padding-left: 10px;
        }

        .property-section .left-side {
            padding: 5px;
            width: 25%
        }
    </style>
    @*custom code end*@
    <script type="text/javascript">
        function valueChange() {
            var listObj = document.getElementById('object').ej2_instances[0];
            var value = document.getElementById('value');
            value.innerHTML = "Selected value : " + JSON.stringify(listObj.value);
        }
    </script>
}
@section Scripts{
    <script type="text/javascript">
        valueChange();
        
    </script>

}
@section Meta{
                    <meta name="description" content="This example demonstrates the Object Value Binding Functionalities in ASP.NET MVC Dropdown List control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
    <p>This sample demonstrates the object value binding functionalities of the DropDownList. Click the DropDownList
        element and select an item from the <code>options</code> list.The corresponding object value of the selected
        item is then assigned to the value property.</p>
    In the property panel, the <code>value</code> property of the selected item's will be displayed.
</div>
}
@section Description{
    <div id="description">
    <p>The <code>DropDownList</code> component contains a list of predefined values from that the user can choose a
        single
        value. </p>
    <p>The object value binding sample illustrates the use of DropDownList that allows the end-users to select an item
        from the <code>options</code> list. Once an item is selected, its associated object value is automatically
        assigned to the <code>value</code> property. This behavior is enabled by the <code>allowObjectBinding</code>
        property.</p>
</div>
}


@section Title{
                    <title>ASP.NET MVC Dropdown List Object Value Binding Functionalities Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Object Value Binding Functionalities in ASP.NET MVC Dropdown List Control</h1>
                }