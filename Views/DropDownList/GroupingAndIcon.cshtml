@using Syncfusion.EJ2
@using Syncfusion.EJ2.DropDowns
@using EJ2MVCSampleBrowser.Models
@section ControlsSection{
    <div class="col-lg-12 control-section">
        <div id='groupList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h3>Grouping</h3>

                @Html.EJS().DropDownList("vegetables").Placeholder("Select a vegetable").PopupHeight("200px").DataSource(
                              (IEnumerable<Vegetables>)ViewData["groupdata"]).Fields(new DropDownListFieldSettings { GroupBy = "Category", Text = "Vegetable", Value = "Id" }).Render()

            </div>
        </div>
        <div id='iconList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h3> Icons</h3>

                @Html.EJS().DropDownList("icons").Placeholder("Select a social media").PopupHeight("200px").DataSource(
                              (IEnumerable<SocialMedia>)ViewData["icondata"]).Fields(new DropDownListFieldSettings { Text = "SocialMediaName", IconCss = "Class", Value = "Id" }).Render()

            </div>
        </div>
    </div>
    <link href="../Content/dropdownlist/grouping.css" rel="stylesheet" />
    @*custom code start*@
    <style>
        .content {
            margin: 0 auto;
            width: 250px;
        }

        .e-rtl .e-dropdownbase .e-fixed-headï¿½ {
            left: auto;
        }

        .e-rtl .e-dropdownbase .e-list-item .e-list-icon {
            font-size: 16px;
            vertical-align: middle;
            padding: 0 0 0 16px;
        }

        .material-dark .e-list-icon,
        .material3-dark .e-list-icon,
        .bootstrap5-dark .e-list-icon,
        .fabric-dark .e-list-icon,
        .bootstrap-dark .e-list-icon,
        .tailwind-dark .e-list-icon,
        .tailwind3-dark .e-list-icon,
        .fluent-dark .e-list-icon,
        .fluent2-dark .e-list-icon,
        .fluent2-highcontrast .e-list-icon,
        .highcontrast .e-list-icon {
           color: #fff;
        }
    </style>
    @*custom code end*@
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Grouping and Icon in ASP.NET MVC Dropdown List control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the grouping and icons supports of the DropDownList. Click the DropDownList element and select an item from the categorized list/icons list.</p>
    </div>
}
@section Description{
    <div id="description">
        <p>The DropDownList allows to group the relevant items under a corresponding category by mapping the <code>groupBy</code> field, and allows to load the list items with icons.</p>

        <p>The grouping sample illustrates how the vegetables are grouped based on its category.</p>

        <p>The 2nd DropDownList is populated with icons that is rendered by mapping the <code>iconCss</code> field.</p>
        <p>
            More information on the grouping feature configuration can be found in the
            <a href="http://ej2.syncfusion.com/aspnet/documentation/?syntax=razor" target="_blank" aria-label="documentation section"> documentation section<span class="sr-only">opens in a new tab</span></a>.
        </p>
    </div>
}

@section Title{
                    <title>ASP.NET MVC Dropdown List Grouping and Icon Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Grouping and Icon in ASP.NET MVC Dropdown List Control</h1>
                }