        .e-kanban .e-price {
            text-align: right;
        }

        .e-kanban .e-card table {
            table-layout: fixed;
        }

        .e-kanban .e-time {
            display: inline-flex;
        }

        .e-kanban .e-size {
            color: #795704;
        }
