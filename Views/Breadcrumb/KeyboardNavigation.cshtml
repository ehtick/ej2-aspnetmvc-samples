@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <div class="content-wrapper">
            <div class="row material2">
                <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                    <h5 style="display: inline-block">Simple Breadcrumb</h5>
                    @Html.EJS().Button("reset").Content("Reset State").CssClass("e-small").Render()
                </div>
            </div>
            <div class="row material2">
                <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                    @Html.EJS().Breadcrumb("keyboard-navigation").EnableNavigation(false).Render()
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    document.getElementById("reset").addEventListener('click', function () {
        var breadcrumb = document.getElementById('keyboard-navigation');
        var breadcrumbInst = ej.base.getComponent(breadcrumb, 'breadcrumb');
        breadcrumbInst.activeItem = breadcrumbInst.items[breadcrumbInst.items.length - 1].text;
    });
</script>
}

