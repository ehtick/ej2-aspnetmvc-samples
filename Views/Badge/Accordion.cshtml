@using Syncfusion.EJ2

@section ControlsSection{
    <div class="col-lg-12 control-section default">

        <div class="sample_container badge-accordion">
            @Html.EJS().Accordion("accordion").Created("created").Items((List<Syncfusion.EJ2.Navigations.AccordionItem>)ViewData["accordionItems"]).Render()
        </div>
    </div>
}
<script type="text/javascript">
    var badgeContent = ["7 New", "27 New", "2 New", "14 New"];
    function created() {
        // Appending Badge component after the accordion rendered in created event
        var element = document.getElementById('accordion');
        var iconElement = Array.prototype.slice.call((element).querySelectorAll('.e-toggle-icon'));
        for (var i = 0; i < iconElement.length; i++) {
            // Success Badge Element
            var badge = document.createElement("SPAN");
            badge.className = "e-badge e-badge-success";
            badge.textContent = badgeContent[i];
            iconElement[i].appendChild(badge);
        }
    }
</script>

@section Meta{
                    <meta name="description" content="This example demonstrates the Accordion in ASP.NET MVC Badge control. Explore here for more details."/>
                }

@section ActionDescription{
    <p>This sample demonstrates the integration of badges into accordion component to display the thread notification count.</p>
}

@section Description{
    <p>
        The badge can be integrated into the accordion with help of the templates to display the count of new message in the message
        thread. Here, the Success badge is used in the accordion. To add success badge, add
        <code>.e-badge-success</code>.
    </p>
}

