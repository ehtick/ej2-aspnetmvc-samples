@using Syncfusion.EJ2;
@section Meta{
    <meta name="description" content="This example demonstrates the Label Template in ASP.NET MVC HeatMap Chart control. Explore here for more details." />
}
@section ControlsSection{
    <div class="control-section">
        <div class="row">
            <div class="col-md-12">
                @Html.EJS().HeatMap("container").PaletteSettings(paletteSettings =>
                paletteSettings.Palette(palette =>
                {
                    palette.Value(2).Color("#61c961").Add();
                    palette.Value(24).Color("#fcc81c").Add();
                    palette.Value(48).Color("#ff6354").Add();
                }).Type(Syncfusion.EJ2.HeatMap.PaletteType.Fixed)).XAxis(
                xAxis => xAxis.Title(ViewData["xtitle"]).Labels((string[])ViewData["xLabels"]).TextStyle(ViewData["labelTextStyle"])
                ).YAxis(yaxis => yaxis.Title(ViewData["ytitle"]).Labels((string[])ViewData["yLabels"]).TextStyle(ViewData["labelTextStyle"])
                ).CellSettings(cellSettings => cellSettings.ShowLabel(true).LabelTemplate("<div><img src='${Image}' style='width: 35px; height: 35px;'/></div>").TextStyle(ViewData["labelTextStyle"])).LegendSettings(legendSettings => legendSettings.Visible(false)).TooltipSettings(tooltipSettings =>
                tooltipSettings.TextStyle(textStyle => textStyle.FontFamily("inherit"))).DataSourceSettings(dataSourceSettings => { dataSourceSettings.IsJsonData(true).AdaptorType(Syncfusion.EJ2.HeatMap.AdaptorType.Cell).XDataMapping("RowId").YDataMapping("ColumnId").ValueMapping("Value"); }).DataSource(ViewData["labelTemplateData"]).Load("load").Render()
            </div>
        </div>
    </div>
    <script>
        var load = function (args) {
            @* custom code start *@
            var selectedTheme = themeName ? themeName : 'Material';
            args.heatmap.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, 'Dark').replace(/-high/i, 'High').replace(/contrast/i, 'Contrast').replace(/5.3/i, '5');
            @* custom code end *@
        };
    </script>
}
@section ActionDescription{
    <p>
        This sample illustrates a comprehensive view of the likelihood and impact of an organizationâ€™s risks. Risks that fall into the HeatMap's green zones require no action. Action is required in the yellow areas. Risks that fall into the red zone require immediate action.
    </p>
}
