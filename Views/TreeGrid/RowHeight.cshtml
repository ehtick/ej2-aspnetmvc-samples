@using Syncfusion.EJ2
@using Syncfusion.EJ2.Grids

@*custom code start*@

@{
    ViewData["Title"] = "RowHeight";
}

@*custom code end*@

@section ControlsSection{
    <div class="control-section">
        @(Html.EJS().TreeGrid("RowHeight")
                    .RowHeight(20)
                    .DataSource((IEnumerable<object>)ViewData["datasource"])
                    .Columns(col =>
                    {
                        col.Field("TaskId").HeaderText("Task ID").Width(90).TextAlign(TextAlign.Right).Add();
                        col.Field("TaskName").HeaderText("Task Name").Width(180).Add();
                        col.Field("StartDate").HeaderText("Start Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
                        col.Field("EndDate").HeaderText("End Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
                        col.Field("Duration").HeaderText("Duration").Width(90).TextAlign(TextAlign.Right).Add();
                        col.Field("Progress").HeaderText("Progress").Width(90).TextAlign(TextAlign.Right).Add();

                    })
                   .Toolbar(new List<object>() {
           new { prefixIcon = "e-big-icon", id = "small", align = "Left", tooltipText = "Small" },
           new { prefixIcon = "e-medium-icon", id = "medium", align = "Left", tooltipText = "Medium" },
           new { prefixIcon = "e-small-icon", id = "big", align = "Left", tooltipText = "Large" }
                   })
                   .RowHeight(20)
                   .Height(400)
                   .ChildMapping("Children")
                   .ToolbarClick("onToolbarClick")
                   .TreeColumnIndex(1)
                   .Render()
        );
    </div>

    <script>
        function onToolbarClick(args) {
            if (args.item.id === 'small') {
                this.rowHeight = 20;
            }
            if (args.item.id === 'medium') {
                this.rowHeight = 40;
            }
            if (args.item.id === 'big') {
                this.rowHeight = 60;
            }
        }
    </script>

    @*custom code start*@

    <style type="text/css">
        @@font-face {
            font-family: 'e-grid-rowheight';
            src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        .fluent2,
        .fluent2-dark,
        .fluent2-highcontrast {
            .e-treegrid .e-toolbar-items{
                padding-top: 4px;
            }
        }
    </style>

    @*custom code end*@

    <style>
    .e-small-icon::before {
    font-family: 'e-grid-rowheight';
    content: '\e707';
    }

    .e-medium-icon::before {
    font-family: 'e-grid-rowheight';
    content: '\e701';
    }

    .e-big-icon::before {
    font-family: 'e-grid-rowheight';
    content: '\e702';
    }
    </style>

}

@*custom code start*@

@section Meta{
                    <meta name="description" content="This example demonstrates the Row Height in ASP.NET MVC Tree Grid control. Explore here for more details."/>
                }


@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the row height feature of the Tree Grid. In this demo, the row height for all the Tree Grid rows can be changed as 20px, 40px and 60px through ToolBar button click.</p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            Tree Grid has provide an option to customize the row height by using <code>RowHeight</code> property of Tree Grid.
        </p>
        <p>
            In this sample, we have enabled an option in Toolbar to customize the row height of Tree Grid to 20px, 40px and 60px.
        </p>
    </div>
}

@*custom code end*@
@section Title{
                    <title>ASP.NET MVC Tree Grid Row Height Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Row Height in ASP.NET MVC Tree Grid Control</h1>
                }