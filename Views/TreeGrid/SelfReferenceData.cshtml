@using Syncfusion.EJ2
@using Syncfusion.EJ2.Grids

@*custom code start*@

@{
    ViewData["Title"] = "SelfReferenceData";
}

@*custom code end*@

@section ControlsSection{
    <div class="control-section">
        @Html.EJS().TreeGrid("TreeGrid").IdMapping("TaskId").ParentIdMapping("ParentId").DataSource((IEnumerable<object>)ViewData["datasource"]).Columns(col =>
       {
           col.Field("TaskId").HeaderText("Task ID").Width(140).TextAlign(TextAlign.Right).Add();
           col.Field("TaskName").HeaderText("Task Name").Width(160).Add();
           col.Field("StartDate").HeaderText("Start Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
           col.Field("EndDate").HeaderText("End Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
           col.Field("Duration").HeaderText("Duration").Width(110).TextAlign(TextAlign.Right).Add();
           col.Field("Progress").HeaderText("Progress").Width(110).TextAlign(TextAlign.Right).Add();
           col.Field("Priority").HeaderText("Priority").Width(110).Add();

       }).Height(400).TreeColumnIndex(1).Render()
    </div>
}

@*custom code start*@

@section Meta{
                    <meta name="description" content="This example demonstrates the Self Reference in ASP.NET MVC Tree Grid control. Explore here for more details."/>
                }


@section ActionDescription{
    <div id="action-description">
        <p>TThis sample demonstrates the way of binding self-referential flat data to Tree Grid component using DataManager.</p>
    </div>
}

@section Description{
    <div id="description">
        <p>
          Tree Grid can be bound either to local or remote data services. The dataSource  property can be assigned either with the array of JavaScript objects or instance of <code>DataManager</code>.
        </p>
        <p>In this demo, the array of self-referential flat data with parent ID is assigned as the data source to the Tree Grid.
            More information on the self-referential data binding can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/tree-grid/data-binding/local-data#self-referential-data-binding-flat-data" aria-label="documentation section" >documentation section<span class="sr-only">opens in a new tab</span></a>.
        </p>
    </div>
}

@*custom code end*@
@section Title{
                    <title>ASP.NET MVC Tree Grid Self Reference Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Self Reference in ASP.NET MVC Tree Grid Control</h1>
                }