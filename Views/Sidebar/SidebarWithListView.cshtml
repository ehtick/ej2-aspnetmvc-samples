@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <div id="wrapper">
            @*main content declaration*@
            <div>
                @Html.EJS().Toolbar("listToolbar").Clicked("toolbarCliked").Items((List<Syncfusion.EJ2.Navigations.ToolbarItem>)ViewData["ListToolItems"]).Render()
            </div>
            <div class="maincontent">
                <div>
                    <div id="listContent" class="content">
                        Before getting into any programming language, one should have basic knowledge about HTML, CSS, and JavaScript. These are the basic building blocks of web designing. HTML describes the structure of a web page whereas CSS describes the presentation of the web page.
                    </div>
                </div>
            </div>
            @*end of main content declaration*@
        </div>
        @{Html.EJS().Sidebar("listSidebar").Width("250px").Target(".maincontent").Type(Syncfusion.EJ2.Navigations.SidebarType.Auto).IsOpen(true).ContentTemplate(@<div>
            @Html.EJS().ListView("listSidebarList").Select("OnSelect").Fields(new Syncfusion.EJ2.Lists.ListViewFieldSettings() { Id = "Id", Text = "Text" }).CssClass("e-template-list").DataSource(ViewData["ListData"]).Template((string)ViewData["ListTemplate"]).Render()
            </div>).Render();}
    </div>
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        sidebarObj = document.getElementById("listSidebar").ej2_instances[0];
    });
    function toolbarCliked(args) {
        if (args.item.tooltipText == "Menu") {
            sidebarObj.toggle();
        }
    }
    function OnSelect(args) {
        document.getElementById("listContent").innerHTML = args.data.Description;
    }
</script>
